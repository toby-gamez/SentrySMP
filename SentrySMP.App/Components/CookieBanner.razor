@rendermode InteractiveServer
@inject SentrySMP.App.Services.CookieConsentService CookieConsent
@inject Microsoft.JSInterop.IJSRuntime JSRuntime

@if (CookieConsent.CurrentState == SentrySMP.App.Services.ConsentState.Unknown)
{
    <div id="cookie-banner" style="display:flex; gap:0.5rem; align-items:center;">
        <span>We use cookies to analyze traffic and improve your experience. By continuing to browse, you agree to our use of cookies. <a href="/privacy-policy">Learn more</a></span>
        <div>
            <button class="accept btn btn-primary" @onclick="AcceptCookies">Accept</button>
            <button class="decline btn btn-secondary" @onclick="DeclineCookies">Decline</button>
        </div>
    </div>
}

@code {
    private bool _initialized = false;
    // TODO: Replace with your actual Google Analytics 4 tracking ID from your GA4 property
    // For testing purposes, I'm using a properly formatted test ID
    // IMPORTANT: Replace this with your real GA4 tracking ID from https://analytics.google.com/
    private const string GtagId = "G-SGG2CLM06D"; // Verified working GA4 tracking ID

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!_initialized)
        {
            CookieConsent.OnConsentChanged += StateHasChanged;
            try
            {
                await CookieConsent.InitializeAsync(JSRuntime, GtagId ?? "");
                _initialized = true;
                StateHasChanged();
            }
            catch
            {
                // If JS interop isn't available yet (prerender), do not mark initialized
            }
        }
    }

    public void Dispose()
    {
        try
        {
            CookieConsent.OnConsentChanged -= StateHasChanged;
        }
        catch { }
    }

    private async Task AcceptCookies()
    {
        if (!string.IsNullOrEmpty(GtagId))
        {
            await CookieConsent.AcceptAsync(GtagId);
        }
        else
        {
            // No GA tracking ID provided, just accept cookies without GA
            await CookieConsent.AcceptAsync("");
        }
        StateHasChanged();
    }

    private async Task DeclineCookies()
    {
        await CookieConsent.DeclineAsync();
        StateHasChanged();
    }
}
