@page "/ranks"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@inject ISentryApi Api
@inject ILogger<Ranks> Logger
@inject SentrySMP.App.Components.State.CartState CartState
@inject IJSRuntime JS
@inject IPurchaseTrackingService PurchaseTrackingService
@inject SentrySMP.App.Authentication.UserService UserService
@rendermode InteractiveServer

<PageTitle>Ranks - SentrySMP</PageTitle>
<div class="main-wrapper">
    <h1 class="main">Ranks</h1>
</div>

            @if (ranks?.Any() == true)
            {
                <div class="mb-3">
                    <!-- No server filter for ranks -->
                </div>
            }

            @if (loading)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @errorMessage
                </div>
            }
            else if (ranks?.Any() == true)
            {
                <div class="product-grid">
                    @foreach (var rank in ranks)
                    {
                        var cartItem = CartState.CartItems.FirstOrDefault(i => i.Key.Id == rank.Id && i.Key.Type == rank.Type);
                        <div class="product">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(rank.Image))
                                {
                                    <img src="@rank.Image" class="product-image" alt="@rank.Name">
                                }
                                else
                                {
                                    <div class="" style="height: 200px;">
                                        <i class="bi bi-award-fill text-white" style="font-size: 3rem;"></i>
                                    </div>
                                }
                                <div class="">
                                    <h2 class="">@rank.Name</h2>
                                    @if (!string.IsNullOrEmpty(rank.Description))
                                    {
                                        <p style="font-weight: normal; font-size: 18px">@rank.Description</p>
                                    }
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div class="price-container">
                                                @if (rank.Sale > 0)
                                                {
                                                    <p class="original-price" title="Original price">€@rank.Price.ToString("F2")</p>
                                                    <p class="discounted-price" title="Sale price">€@(CalculateSalePrice(rank.Price, rank.Sale).ToString("F2"))</p>
                                                    <span class="discount-badge">@rank.Sale% OFF</span>
                                                }
                                                else
                                                {
                                                    <strong class="text-primary fs-5">€@rank.Price.ToString("F2")</strong>
                                                }
                                            </div>
                                        </div>
                                        @if (rank.GlobalMaxOrder.HasValue)
                                        {
                                            <div class="mb-2">
                                                <small class="text-info">
                                                    <i class="bi bi-info-circle"></i> Limited availability
                                                    @if (_purchasedCounts.TryGetValue($"Rank_{rank.Id}", out var purchased))
                                                    {
                                                        <br /><span class="text-warning">Sold: @purchased/@rank.GlobalMaxOrder</span>
                                                    }
                                                </small>
                                            </div>
                                        }
                                        @{
                                            var remainingQty = GetRemainingQuantity("Rank", rank.Id, rank.GlobalMaxOrder);
                                            var isSoldOut = remainingQty == 0;
                                        }
                                        <div style="display: flex; align-items: center; justify-content: space-between">
                                            <button class="" @onclick="() => ShowRankDetails(rank)">
                                                <i class="bi bi-info-circle"></i> Details
                                            </button>
                                            @if (cartItem == null)
                                            {
                                                <button class="btn btn-outline-success btn-sm w-100 mt-2" @onclick="async () => await AddToCart(rank)" disabled="@isSoldOut">
                                                    <i class="bi bi-@(isSoldOut ? "x-circle" : "cart-plus")"></i> @(isSoldOut ? "Sold Out" : "Add to Cart")
                                                </button>
                                            }
                                            else
                                            {
                                                <div style="display: block ruby;">
                                                    <div class="quantity-controls">
                                                        <button class="quantity-btn" @onclick="() => ChangeQuantity(rank, -1)" disabled="@(cartItem.Quantity <= 1)">-</button>
                                                        <span class="item-quantity">@cartItem.Quantity</span>
                                                        <button class="quantity-btn" @onclick="() => ChangeQuantity(rank, 1)" disabled="@(cartItem.Quantity >= Math.Min(1, remainingQty))">+</button>
                                                    </div>
                                                    <button class="danger" @onclick="async () => await RemoveFromCart(rank)" title="Remove from cart">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle-fill"></i>
                    No ranks available at the moment.
                </div>
            }

@if (selectedRank != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">
                        <i class="bi bi-award-fill"></i>
                        @selectedRank.Name
                    </h2>
                    <button type="button" class="btn-close" @onclick="CloseRankDetails"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @if (!string.IsNullOrEmpty(selectedRank.Image))
                        {
                            <div class="col-md-6">
                                <img src="@selectedRank.Image" class="img-fluid rounded" alt="@selectedRank.Name">
                            </div>
                        }
                        <div class="col-md-@(string.IsNullOrEmpty(selectedRank.Image) ? "12" : "6")">
                            <div class="row" style="padding: 20px">
                                <h2 class="col-sm-8">@selectedRank.Name</h2>
                                @if (!string.IsNullOrEmpty(selectedRank.Description))
                                {
                                    <p class="col-sm-8">@selectedRank.Description</p>
                                }
                                <small class="text-muted">&nbsp;</small>
                                    <div class="price-container">
                                        @if (selectedRank.Sale > 0)
                                        {
                                            <p class="original-price" title="Original price">€@selectedRank.Price.ToString("F2")</p>
                                            <p class="discounted-price" title="Sale price">€@(CalculateSalePrice(selectedRank.Price, selectedRank.Sale).ToString("F2"))</p>
                                            <span class="discount-badge">@selectedRank.Sale% OFF</span>
                                        }
                                        else
                                        {
                                            <strong class="text-primary fs-5">€@selectedRank.Price.ToString("F2")</strong>
                                        }
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @{
                        var cartItemModal = CartState.CartItems.FirstOrDefault(i => i.Key.Id == selectedRank!.Id && i.Key.Type == selectedRank.Type);
                        var remainingQtyModal = GetRemainingQuantity("Rank", selectedRank!.Id, selectedRank.GlobalMaxOrder);
                        var isSoldOutModal = remainingQtyModal == 0;
                    }
                    @if (cartItemModal == null)
                    {
                        <button type="button" class="btn btn-outline-success" @onclick="async () => await AddToCart(selectedRank!)" disabled="@isSoldOutModal">
                            <i class="bi bi-cart-plus"></i> @(isSoldOutModal ? "Sold Out" : "Add to Cart")
                        </button>
                    }
                    else
                    {
                        <div style="display: block ruby;">
                            <div class="quantity-controls">
                                <button class="quantity-btn" @onclick="() => ChangeQuantity(selectedRank!, -1)" disabled="@(cartItemModal.Quantity <= 1)">-</button>
                                <span>@cartItemModal.Quantity</span>
                                <button class="quantity-btn" @onclick="() => ChangeQuantity(selectedRank!, 1)" disabled="@(cartItemModal.Quantity >= Math.Min(1, remainingQtyModal))">+</button>
                            </div>
                            <button class="danger" @onclick="async () => await RemoveFromCart(selectedRank!)" title="Remove from cart">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<RankResponse>? ranks;
    private bool loading = true;
    private string? errorMessage;
    private RankResponse? selectedRank;

    private bool _cartLoaded = false;
    
    private Dictionary<string, int> _purchasedCounts = new();
    private string? _username;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadRanks();
        await LoadPurchasedCounts();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_cartLoaded)
        {
            await CartState.LoadFromStorageAsync(JS);
            _cartLoaded = true;
            StateHasChanged();
        }
    }

    private async Task LoadRanks()
    {
        try
        {
            loading = true;
            errorMessage = null;
            ranks = (await Api.GetRanksAsync()).ToList();
            // No server aggregation needed for ranks
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading ranks: {ex.Message}";
            Logger.LogError(ex, "Error loading ranks");
        }
        finally
        {
            loading = false;
        }
    }

    // No server filter logic for ranks

    private void ShowRankDetails(RankResponse rank)
    {
        selectedRank = rank;
    }

    private void CloseRankDetails()
    {
        selectedRank = null;
    }

    private double CalculateSalePrice(double originalPrice, int salePercentage)
    {
        return originalPrice * (1 - salePercentage / 100.0);
    }

    private int? addedRankId;
    private async Task AddToCart(RankResponse rank)
    {
        await JS.InvokeVoidAsync("console.log", $"AddToCart: {rank.Name} (ID: {rank.Id})");
        await CartState.AddToCartAsync(rank);
        addedRankId = rank.Id;
        StateHasChanged();
        await Task.Delay(1200);
        if (addedRankId == rank.Id) { addedRankId = null; StateHasChanged(); }
    }

    private async Task ChangeQuantity(RankResponse rank, int delta)
    {
        await CartState.ChangeQuantityAsync(rank, delta);
    }

    private async Task RemoveFromCart(RankResponse rank)
    {
        await CartState.RemoveFromCartAsync(rank);
        StateHasChanged();
    }

    private async Task AddSelectedToCart()
    {
        if (selectedRank != null)
        {
            await AddToCart(selectedRank);
        }
    }

    private async Task LoadPurchasedCounts()
    {
        if (ranks == null) return;
        
        foreach (var rank in ranks.Where(r => r.GlobalMaxOrder.HasValue))
        {
            var count = await PurchaseTrackingService.GetGlobalPurchasedAsync("Rank", rank.Id);
            _purchasedCounts[$"Rank_{rank.Id}"] = count;
        }
    }

    private int GetRemainingQuantity(string type, int id, int? globalMaxOrder)
    {
        if (!globalMaxOrder.HasValue) return int.MaxValue;
        
        if (_purchasedCounts.TryGetValue($"{type}_{id}", out var purchased))
        {
            return Math.Max(0, globalMaxOrder.Value - purchased);
        }
        
        return globalMaxOrder.Value;
    }
}
