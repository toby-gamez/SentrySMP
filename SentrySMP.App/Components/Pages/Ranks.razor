@page "/ranks"
<SentrySMP.App.Components.Shared.ShowUsername />
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@inject ISentryApi Api
@inject ILogger<Ranks> Logger
@inject SentrySMP.App.Components.State.CartState CartState
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Ranks - SentrySMP</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Available Ranks</h1>
            @if (ranks?.Any() == true)
            {
                <div class="mb-3">
                    <!-- No server filter for ranks -->
                </div>
            }

            @if (loading)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @errorMessage
                </div>
            }
            else if (ranks?.Any() == true)
            {
                <div class="row">
                    @foreach (var rank in ranks)
                    {
                        var cartItem = CartState.CartItems.FirstOrDefault(i => i.Key.Id == rank.Id && i.Key.Type == rank.Type);
                        <div class="col-md-4 col-lg-3 mb-4">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(rank.Image))
                                {
                                    <img src="@rank.Image" class="card-img-top" alt="@rank.Name" style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="bi bi-award-fill text-white" style="font-size: 3rem;"></i>
                                    </div>
                                }
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@rank.Name</h5>
                                    @if (!string.IsNullOrEmpty(rank.Description))
                                    {
                                        <p class="card-text flex-grow-1">@rank.Description</p>
                                    }
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div>
                                                @if (rank.Sale > 0)
                                                {
                                                    <div class="mb-1">
                                                        <span class="badge bg-danger me-2">@rank.Sale% OFF</span>
                                                    </div>
                                                    <div>
                                                        <span class="text-muted text-decoration-line-through me-2" title="Original price">
                                                            €@rank.Price.ToString("F2")
                                                        </span>
                                                        <strong class="text-success fs-5" title="Sale price">
                                                            €@(CalculateSalePrice(rank.Price, rank.Sale).ToString("F2"))
                                                        </strong>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <strong class="text-primary fs-5">€@rank.Price.ToString("F2")</strong>
                                                }
                                            </div>
                                            <!-- Ranks have no server -->
                                        </div>
                                        <button class="btn btn-primary btn-sm w-100" 
                                                @onclick="() => ShowRankDetails(rank)">
                                            <i class="bi bi-info-circle"></i> View Details
                                        </button>
                                        @if (cartItem == null)
                                        {
                                            <button class="btn btn-outline-success btn-sm w-100 mt-2" @onclick="async () => await AddToCart(rank)">
                                                <i class="bi bi-cart-plus"></i> Add to Cart
                                            </button>
                                            @if (addedRankId == rank.Id)
                                            {
                                                <div class="alert alert-success py-1 px-2 mt-2 mb-0 text-center" style="font-size:0.95em;">Přidáno!</div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center gap-2 mt-2 justify-content-center">
                                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => ChangeQuantity(rank, -1)" disabled="@(cartItem.Quantity <= 1)">-</button>
                                                <span>@cartItem.Quantity</span>
                                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => ChangeQuantity(rank, 1)" disabled="@(cartItem.Quantity >= 10)">+</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle-fill"></i>
                    No ranks available at the moment.
                </div>
            }
        </div>
    </div>
</div>

@if (selectedRank != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-award-fill"></i>
                        @selectedRank.Name
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseRankDetails"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @if (!string.IsNullOrEmpty(selectedRank.Image))
                        {
                            <div class="col-md-6">
                                <img src="@selectedRank.Image" class="img-fluid rounded" alt="@selectedRank.Name">
                            </div>
                        }
                        <div class="col-md-@(string.IsNullOrEmpty(selectedRank.Image) ? "12" : "6")">
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@selectedRank.Name</dd>
                                
                                <dt class="col-sm-4">Price:</dt>
                                <dd class="col-sm-8">
                                    @if (selectedRank.Sale > 0)
                                    {
                                        <div class="mb-1">
                                            <span class="badge bg-danger">@selectedRank.Sale% OFF</span>
                                        </div>
                                        <div>
                                            <span class="text-muted text-decoration-line-through me-2" title="Original price">
                                                €@selectedRank.Price.ToString("F2")
                                            </span>
                                            <strong class="text-success fs-5" title="Sale price">
                                                €@(CalculateSalePrice(selectedRank.Price, selectedRank.Sale).ToString("F2"))
                                            </strong>
                                        </div>
                                    }
                                    else
                                    {
                                        <strong class="text-primary fs-5">€@selectedRank.Price.ToString("F2")</strong>
                                    }
                                </dd>
                                
                                <!-- Ranks have no server -->
                                
                                @if (!string.IsNullOrEmpty(selectedRank.Description))
                                {
                                    <dt class="col-sm-4">Description:</dt>
                                    <dd class="col-sm-8">@selectedRank.Description</dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseRankDetails">Close</button>
                    @{
                        var cartItemModal = CartState.CartItems.FirstOrDefault(i => i.Key.Id == selectedRank!.Id && i.Key.Type == selectedRank.Type);
                    }
                    @if (cartItemModal == null)
                    {
                        <button type="button" class="btn btn-outline-success" @onclick="async () => await AddToCart(selectedRank!)">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                        @if (addedRankId == selectedRank!.Id)
                        {
                            <div class="alert alert-success py-1 px-2 ms-2 mb-0" style="font-size:0.95em;">Přidáno!</div>
                        }
                    }
                    else
                    {
                        <div class="d-flex align-items-center gap-2">
                            <button class="btn btn-sm btn-outline-secondary" @onclick="() => ChangeQuantity(selectedRank!, -1)" disabled="@(cartItemModal.Quantity <= 1)">-</button>
                            <span>@cartItemModal.Quantity</span>
                            <button class="btn btn-sm btn-outline-secondary" @onclick="() => ChangeQuantity(selectedRank!, 1)" disabled="@(cartItemModal.Quantity >= 10)">+</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<RankResponse>? ranks;
    private bool loading = true;
    private string? errorMessage;
    private RankResponse? selectedRank;

    private bool _cartLoaded = false;
    protected override async Task OnInitializedAsync()
    {
        await LoadRanks();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_cartLoaded)
        {
            await CartState.LoadFromStorageAsync(JS);
            _cartLoaded = true;
            StateHasChanged();
        }
    }

    private async Task LoadRanks()
    {
        try
        {
            loading = true;
            errorMessage = null;
            ranks = (await Api.GetRanksAsync()).ToList();
            // No server aggregation needed for ranks
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading ranks: {ex.Message}";
            Logger.LogError(ex, "Error loading ranks");
        }
        finally
        {
            loading = false;
        }
    }

    // No server filter logic for ranks

    private void ShowRankDetails(RankResponse rank)
    {
        selectedRank = rank;
    }

    private void CloseRankDetails()
    {
        selectedRank = null;
    }

    private double CalculateSalePrice(double originalPrice, int salePercentage)
    {
        return originalPrice * (1 - salePercentage / 100.0);
    }

    private int? addedRankId;
    private async Task AddToCart(RankResponse rank)
    {
        await JS.InvokeVoidAsync("console.log", $"AddToCart: {rank.Name} (ID: {rank.Id})");
        await CartState.AddToCartAsync(rank);
        addedRankId = rank.Id;
        StateHasChanged();
        await Task.Delay(1200);
        if (addedRankId == rank.Id) { addedRankId = null; StateHasChanged(); }
    }

    private async Task ChangeQuantity(RankResponse rank, int delta)
    {
        await CartState.ChangeQuantityAsync(rank, delta);
    }

    private async Task AddSelectedToCart()
    {
        if (selectedRank != null)
        {
            await AddToCart(selectedRank);
        }
    }
}
