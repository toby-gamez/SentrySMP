@page "/coins"
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@inject ISentryApi Api
@inject ILogger<Coins> Logger
@inject SentrySMP.App.Components.State.CartState CartState
@inject IJSRuntime JS
@rendermode InteractiveServer
<PageTitle>Coins - SentrySMP</PageTitle>

<div class="main-wrapper">
    <h1 class="main">Coins</h1>
</div>
            <!-- Server filter dropdown -->
            @if (coins?.Any() == true)
            {
                <div class="mb-3 d-flex align-items-center gap-2">
                    <label for="serverFilter" class="form-label mb-0">Filter by server:</label>
                    <select id="serverFilter" class="form-select w-auto" @onchange="OnServerFilterChanged">
                        <option value="">All servers</option>
                        @foreach (var server in servers)
                        {
                            <option value="@server.Id" selected="@(server.Id == selectedServerId)">@server.Name</option>
                        }
                    </select>
                </div>
            }
            @if (loading)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @errorMessage
                </div>
            }
            else if (filteredCoins?.Any() == true)
            {
                <div class="product-grid">
                    @foreach (var coin in filteredCoins)
                    {
                        var cartItem = CartState.CartItems.FirstOrDefault(i => i.Key.Id == coin.Id && i.Key.Type == "Coin");
                        <div class="product">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(coin.Image))
                                {
                                    <img src="@coin.Image" class="product-image" alt="@coin.Name">
                                }
                                else
                                {
                                    <div class="" style="height: 200px;">
                                        <i class="bi bi-box-fill text-white" style="font-size: 3rem;"></i>
                                    </div>
                                }
                                <div class="">
                                    <h2 class="">@coin.Name</h2>
                                    @if (!string.IsNullOrEmpty(coin.Description))
                                    {
                                        <p style="font-weight: normal; font-size: 18px">@coin.Description</p>
                                    }
                                    <small class="text-muted">Server: @coin.Server?.Name</small>
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div class="price-container">
                                                @if (coin.Sale > 0)
                                                {
                                                    <p class="original-price" title="Original price">
                                                        €@coin.Price.ToString("F2")
                                                    </p>
                                                    <p class="discounted-price" title="Sale price">
                                                        €@(CalculateSalePrice(coin.Price, coin.Sale).ToString("F2"))
                                                    </p>
                                                    <span class="discount-badge">@coin.Sale% OFF</span>
                                                }
                                                else
                                                {
                                                    <strong class="text-primary fs-5">€@coin.Price.ToString("F2")</strong>
                                                }
                                            </div>
                                        </div>
                                        <div style="display: flex; align-items: center; justify-content: space-between">
                                            <button class="" @onclick="() => ShowCoinDetails(coin)">
                                                <i class="bi bi-info-circle"></i> Details
                                            </button>
                                            @if (cartItem == null)
                                            {
                                                <button class="btn btn-outline-success btn-sm w-100 mt-2" @onclick="async () => await AddToCart(coin)">
                                                    <i class="bi bi-cart-plus"></i> Add
                                                </button>
                                                @if (addedCoinId == coin.Id)
                                                {
                                                    <div class="alert alert-success py-1 px-2 mt-2 mb-0 text-center" style="font-size:0.95em;">Přidáno!</div>
                                                }
                                            }
                                            else
                                            {
                                                <div class="quantity-controls">
                                                    <button class="quantity-btn" @onclick="() => ChangeQuantity(coin, -1)" disabled="@(cartItem.Quantity <= 1)">-</button>
                                                    <span class="item-quantity">@cartItem.Quantity</span>
                                                    <button class="quantity-btn" @onclick="() => ChangeQuantity(coin, 1)" disabled="@(cartItem.Quantity >= 10)">+</button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle-fill"></i>
                    No coins available at the moment.
                </div>
            }

<!-- Coin Details Modal (mirrors Keys modal layout) -->
@if (selectedCoin != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">
                        <i class="bi bi-box-fill"></i>
                        @selectedCoin.Name
                    </h2>
                    <button type="button" class="btn-close" @onclick="CloseCoinDetails"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @if (!string.IsNullOrEmpty(selectedCoin.Image))
                        {
                            <div class="col-md-6">
                                <img src="@selectedCoin.Image" class="img-fluid rounded" alt="@selectedCoin.Name">
                            </div>
                        }
                        <div class="col-md-@(string.IsNullOrEmpty(selectedCoin.Image) ? "12" : "6")">
                            <div class="row" style="padding: 20px">
                                <h2 class="col-sm-8">@selectedCoin.Name</h2>
                                @if (!string.IsNullOrEmpty(selectedCoin.Description))
                                {
                                    <p class="col-sm-8">@selectedCoin.Description</p>
                                }
                                <small class="text-muted">Server: @selectedCoin.Server?.Name</small>
                                    <div class="price-container">
                                        @if (selectedCoin.Sale > 0)
                                        {
                                            <p class="original-price" title="Original price">
                                                €@selectedCoin.Price.ToString("F2")
                                            </p>
                                            <p class="discounted-price" title="Sale price">
                                                €@(CalculateSalePrice(selectedCoin.Price, selectedCoin.Sale).ToString("F2"))
                                            </p>
                                            <span class="discount-badge">@selectedCoin.Sale% OFF</span>
                                        }
                                        else
                                        {
                                            <strong class="text-primary fs-5">€@selectedCoin.Price.ToString("F2")</strong>
                                        }
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @{
                        var cartItemModal = CartState.CartItems.FirstOrDefault(i => i.Key.Id == selectedCoin!.Id && i.Key.Type == "Coin");
                    }
                    @if (cartItemModal == null)
                    {
                        <button type="button" class="btn btn-outline-success" @onclick="async () => await AddToCart(selectedCoin!)">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                        @if (addedCoinId == selectedCoin!.Id)
                        {
                            <div class="alert alert-success py-1 px-2 ms-2 mb-0" style="font-size:0.95em;">Přidáno!</div>
                        }
                    }
                    else
                    {
                        <div class="quantity-controls">
                            <button class="quantity-btn" @onclick="() => ChangeQuantity(selectedCoin!, -1)" disabled="@(cartItemModal.Quantity <= 1)">-</button>
                            <span>@cartItemModal.Quantity</span>
                            <button class="quantity-btn" @onclick="() => ChangeQuantity(selectedCoin!, 1)" disabled="@(cartItemModal.Quantity >= 10)">+</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<CoinResponse>? coins;
    private List<CoinResponse>? filteredCoins;
    private List<ServerResponse> servers = new();
    private int? selectedServerId;
    private bool loading = true;
    private string? errorMessage;
    private CoinResponse? selectedCoin;

    private bool _cartLoaded = false;
    private int? addedCoinId;

    protected override async Task OnInitializedAsync()
    {
        await LoadCoins();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_cartLoaded)
        {
            await CartState.LoadFromStorageAsync(JS);
            _cartLoaded = true;
            StateHasChanged();
        }
    }

    private async Task LoadCoins()
    {
        try
        {
            loading = true;
            errorMessage = null;
            coins = (await Api.GetCoinsAsync()).ToList();
            // build server list from coins and apply filter
            servers = coins
                .Where(s => s.Server != null)
                .Select(s => s.Server!)
                .GroupBy(s => s.Id)
                .Select(g => g.First())
                .OrderBy(s => s.Name)
                .ToList();
            ApplyServerFilter();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading coins: {ex.Message}";
            Logger.LogError(ex, "Error loading coins");
        }
        finally
        {
            loading = false;
        }
    }

    private void ApplyServerFilter()
    {
        if (selectedServerId.HasValue)
        {
            filteredCoins = coins?.Where(s => s.Server?.Id == selectedServerId.Value).ToList();
        }
        else
        {
            filteredCoins = coins;
        }
    }

    private void OnServerFilterChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (int.TryParse(value, out var id))
        {
            selectedServerId = id;
        }
        else
        {
            selectedServerId = null;
        }
        ApplyServerFilter();
        StateHasChanged();
    }

    private void ShowCoinDetails(CoinResponse coin)
    {
        selectedCoin = coin;
    }

    private void CloseCoinDetails()
    {
        selectedCoin = null;
    }

    private double CalculateSalePrice(double originalPrice, int salePercentage)
    {
        return originalPrice * (1 - salePercentage / 100.0);
    }

    private async Task AddToCart(CoinResponse coin)
    {
        await JS.InvokeVoidAsync("console.log", $"AddToCart: {coin.Name} (ID: {coin.Id})");
        await CartState.AddToCartAsync(coin);
        addedCoinId = coin.Id;
        StateHasChanged();
        await Task.Delay(1200);
        if (addedCoinId == coin.Id) { addedCoinId = null; StateHasChanged(); }
    }

    private async Task ChangeQuantity(CoinResponse coin, int delta)
    {
        await CartState.ChangeQuantityAsync(coin, delta);
    }

    private async Task AddSelectedToCart()
    {
        if (selectedCoin != null)
        {
            await AddToCart(selectedCoin);
        }
    }
}
