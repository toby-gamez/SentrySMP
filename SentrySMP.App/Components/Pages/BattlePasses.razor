@page "/battlepasses"
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@inject ISentryApi Api
@inject ILogger<BattlePasses> Logger
@inject SentrySMP.App.Components.State.CartState CartState
@inject IJSRuntime JS
@inject IPurchaseTrackingService PurchaseTrackingService
@inject SentrySMP.App.Authentication.UserService UserService
@rendermode InteractiveServer

<PageTitle>Battle passes - SentrySMP</PageTitle>

<div class="main-wrapper">
    <h1 class="main">Battle passes</h1>
</div>
            <!-- Server filter dropdown -->
            @if (items?.Any() == true)
            {
                <div class="mb-3 d-flex align-items-center gap-2">
                    <label for="serverFilter" class="form-label mb-0">Filter by server:</label>
                    <select id="serverFilter" class="form-select w-auto" @onchange="OnServerFilterChanged">
                        <option value="">All servers</option>
                        @foreach (var server in servers)
                        {
                            <option value="@server.Id" selected="@(server.Id == selectedServerId)">@server.Name</option>
                        }
                    </select>
                </div>
            }
            @if (loading)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">@errorMessage</div>
            }
            else if (filteredItems?.Any() == true)
            {
                <div class="product-grid">
                    @foreach (var it in filteredItems)
                    {
                        var cartItem = CartState.CartItems.FirstOrDefault(i => i.Key.Id == it.Id && i.Key.Type == it.Type);
                        <div class="product">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(it.Image))
                                {
                                    <img src="@it.Image" class="product-image" alt="@it.Name">
                                }
                                else
                                {
                                    <div class="" style="height: 200px;">
                                        <i class="bi bi-ticket-fill text-white" style="font-size: 3rem;"></i>
                                    </div>
                                }
                                <div class="">
                                    <h2 class="">@it.Name</h2>
                                    
                                    @if (!string.IsNullOrEmpty(it.Description))
                                    {
                                        <p style="font-weight: normal; font-size: 18px">@it.Description</p>
                                    }
                                    <small class="text-muted">Server: @it.Server?.Name</small>
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div class="price-container">
                                                @if (it.Sale > 0)
                                                {
                                                    <p class="original-price" title="Original price">€@it.Price.ToString("F2")</p>
                                                    <p class="discounted-price" title="Sale price">€@(CalculateSalePrice(it.Price, it.Sale).ToString("F2"))</p>
                                                    <span class="discount-badge">@it.Sale% OFF</span>
                                                }
                                                else
                                                {
                                                    <strong class="text-primary fs-5">€@it.Price.ToString("F2")</strong>
                                                }
                                            </div>
                                        </div>
                                        @if (it.GlobalMaxOrder.HasValue)
                                        {
                                            <div class="mb-2">
                                                <small class="text-info">
                                                    <i class="bi bi-info-circle"></i> Limited availability
                                                    @if (_purchasedCounts.TryGetValue($"BattlePass_{it.Id}", out var purchased))
                                                    {
                                                        <br /><span class="text-warning">Sold: @purchased/@it.GlobalMaxOrder</span>
                                                    }
                                                </small>
                                            </div>
                                        }
                                        <div style="display: flex; align-items: center; justify-content: space-between">
                                            <button class="" @onclick="() => ShowDetails(it)"><i class="bi bi-info-circle"></i> Details</button>
                                            @if (cartItem == null)
                                            {
                                                <button class="btn btn-outline-success btn-sm w-100 mt-2" @onclick="async () => await AddToCart(it)"><i class="bi bi-cart-plus"></i> Add</button>
                                            }
                                            else
                                            {
                                                <div class="quantity-controls">
                                                    <button class="quantity-btn" @onclick="() => ChangeQuantity(it, -1)" disabled="@(cartItem.Quantity <= 1)">-</button>
                                                    <span class="item-quantity">@cartItem.Quantity</span>
                                                    <button class="quantity-btn" @onclick="() => ChangeQuantity(it, 1)" disabled="@(cartItem.Quantity >= 1)">+</button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
                else
            {
                <div class="alert alert-info">No battle passes available at the moment.</div>
            }

@code {
    private List<BattlePassResponse>? items;
    private List<BattlePassResponse>? filteredItems;
    private List<ServerResponse> servers = new();
    private int? selectedServerId;
    private bool loading = true;
    private string? errorMessage;
    private int? addedId;
    
    private Dictionary<string, int> _purchasedCounts = new();
    private string? _username;

    protected override async Task OnInitializedAsync()
    {
        await LoadItems();
        await LoadPurchasedCounts();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CartState.LoadFromStorageAsync(JS);
            StateHasChanged();
                }
    }

    private async Task LoadItems()
    {
        try
        {
            loading = true;
            errorMessage = null;
            items = (await Api.GetBattlePassesAsync()).ToList();
            // build server list from items
            servers = items
                .Where(i => i.Server != null)
                .Select(i => i.Server!)
                .GroupBy(s => s.Id)
                .Select(g => g.First())
                .OrderBy(s => s.Name)
                .ToList();
            ApplyServerFilter();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading: {ex.Message}";
            Logger.LogError(ex, "Error");
        }
        finally
        {
            loading = false;
        }
    }

    // build server list and apply server filter
    private void ApplyServerFilter()
    {
        if (selectedServerId.HasValue)
        {
            filteredItems = items?.Where(i => i.Server?.Id == selectedServerId.Value).ToList();
        }
        else
        {
            filteredItems = items;
        }
    }

    private void OnServerFilterChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (int.TryParse(value, out var id))
        {
            selectedServerId = id;
        }
        else
        {
            selectedServerId = null;
        }
        ApplyServerFilter();
        StateHasChanged();
    }

    private double CalculateSalePrice(double price, int sale) => price * (1 - sale / 100.0);

    private BattlePassResponse? selectedBattlePass;

    private void ShowDetails(BattlePassResponse bp)
    {
        selectedBattlePass = bp;
    }

    private void CloseBattlePassDetails()
    {
        selectedBattlePass = null;
    }

    private async Task AddSelectedToCart()
    {
        if (selectedBattlePass != null)
        {
            // Reuse the same AddToCart flow so UI feedback (Added!) is consistent
            await AddToCart(selectedBattlePass);
        }
    }

    private async Task AddToCart(BattlePassResponse bp)
    {
        await JS.InvokeVoidAsync("console.log", $"AddToCart: {bp.Name} (ID: {bp.Id})");
        await CartState.AddToCartAsync(bp);
        addedId = bp.Id;
        StateHasChanged();
        await Task.Delay(1200);
        if (addedId == bp.Id) { addedId = null; StateHasChanged(); }
    }

    private async Task ChangeQuantity(BattlePassResponse bp, int delta) => await CartState.ChangeQuantityAsync(bp, delta);

    private async Task RemoveFromCart(BattlePassResponse bp)
    {
        await CartState.RemoveFromCartAsync(bp);
        StateHasChanged();
    }

    private async Task LoadPurchasedCounts()
    {
        if (items == null) return;
        
        foreach (var item in items.Where(i => i.GlobalMaxOrder.HasValue))
        {
            var count = await PurchaseTrackingService.GetGlobalPurchasedAsync("BattlePass", item.Id);
            _purchasedCounts[$"BattlePass_{item.Id}"] = count;
        }
    }
}

@* Battle pass details modal (Keys-style) *@
@if (selectedBattlePass != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">
                        <i class="bi bi-ticket-fill"></i>
                        @selectedBattlePass.Name
                    </h2>
                    <button type="button" class="btn-close" @onclick="CloseBattlePassDetails"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @if (!string.IsNullOrEmpty(selectedBattlePass.Image))
                        {
                            <div class="col-md-6">
                                <img src="@selectedBattlePass.Image" class="img-fluid rounded" alt="@selectedBattlePass.Name">
                            </div>
                        }
                        <div class="col-md-@(string.IsNullOrEmpty(selectedBattlePass.Image) ? "12" : "6")">
                            <div class="row" style="padding: 20px">
                                <h2 class="col-sm-8">@selectedBattlePass.Name</h2>
                                @if (!string.IsNullOrEmpty(selectedBattlePass.Description))
                                {
                                    <p class="col-sm-8">@selectedBattlePass.Description</p>
                                }
                                <small class="text-muted">Server: @selectedBattlePass.Server?.Name</small>
                                    @if (selectedBattlePass.Commands != null && selectedBattlePass.Commands.Any())
                                    {
                                        <div class="col-12 mt-3">
                                            <h5>Commands</h5>
                                            <ul class="list-group">
                                                @foreach (var c in selectedBattlePass.Commands)
                                                {
                                                    <li class="list-group-item"><code>@c.CommandText</code></li>
                                                }
                                            </ul>
                                        </div>
                                    }
                                    <div class="price-container">
                                        @if (selectedBattlePass.Sale > 0)
                                        {
                                            <p class="original-price" title="Original price">€@selectedBattlePass.Price.ToString("F2")</p>
                                            <p class="discounted-price" title="Sale price">€@(CalculateSalePrice(selectedBattlePass.Price, selectedBattlePass.Sale).ToString("F2"))</p>
                                            <span class="discount-badge">@selectedBattlePass.Sale% OFF</span>
                                        }
                                        else
                                        {
                                            <strong class="text-primary fs-5">€@selectedBattlePass.Price.ToString("F2")</strong>
                                        }
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @{
                        var cartItemModal = CartState.CartItems.FirstOrDefault(i => i.Key.Id == selectedBattlePass!.Id && i.Key.Type == selectedBattlePass.Type);
                    }
                    @if (cartItemModal == null)
                    {
                        <button type="button" class="btn btn-outline-success" @onclick="async () => await AddToCart(selectedBattlePass!)">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    }
                    else
                    {
                        <div style="display: block ruby;">
                            <div class="quantity-controls">
                                <button class="quantity-btn" @onclick="() => ChangeQuantity(selectedBattlePass!, -1)" disabled="@(cartItemModal.Quantity <= 1)">-</button>
                                <span>@cartItemModal.Quantity</span>
                                <button class="quantity-btn" @onclick="() => ChangeQuantity(selectedBattlePass!, 1)" disabled="@(cartItemModal.Quantity >= 1)">+</button>
                            </div>
                            <button class="danger" @onclick="async () => await RemoveFromCart(selectedBattlePass!)" title="Remove from cart">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
