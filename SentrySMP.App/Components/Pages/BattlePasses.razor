@page "/battlepasses"
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@inject ISentryApi Api
@inject ILogger<BattlePasses> Logger
@inject SentrySMP.App.Components.State.CartState CartState
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>BattlePasses - SentrySMP</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Available Battle passes</h1>
            @if (loading)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">@errorMessage</div>
            }
            else if (items?.Any() == true)
            {
                <div class="row">
                    @foreach (var it in items)
                    {
                        var cartItem = CartState.CartItems.FirstOrDefault(i => i.Key.Id == it.Id && i.Key.Type == it.Type);
                        <div class="col-md-4 col-lg-3 mb-4">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(it.Image))
                                {
                                    <img src="@it.Image" class="card-img-top" alt="@it.Name" style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="bi bi-ticket-fill text-white" style="font-size: 3rem;"></i>
                                    </div>
                                }
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@it.Name</h5>
                                    @if (!string.IsNullOrEmpty(it.Description))
                                    {
                                        <p class="card-text flex-grow-1">@it.Description</p>
                                    }
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div>
                                                @if (it.Sale > 0)
                                                {
                                                    <div class="mb-1"><span class="badge bg-danger me-2">@it.Sale% OFF</span></div>
                                                    <div>
                                                        <span class="text-muted text-decoration-line-through me-2">€@it.Price.ToString("F2")</span>
                                                        <strong class="text-success fs-5">€@(CalculateSalePrice(it.Price, it.Sale).ToString("F2"))</strong>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <strong class="text-primary fs-5">€@it.Price.ToString("F2")</strong>
                                                }
                                            </div>
                                            <small class="text-muted">Server: @it.Server?.Name</small>
                                        </div>
                                        <button class="btn btn-primary btn-sm w-100" @onclick="() => ShowDetails(it)"> <i class="bi bi-info-circle"></i> View Details</button>
                                        @if (cartItem == null)
                                        {
                                            <button class="btn btn-outline-success btn-sm w-100 mt-2" @onclick="async () => await AddToCart(it)"><i class="bi bi-cart-plus"></i> Add to Cart</button>
                                            @if (addedId == it.Id) { <div class="alert alert-success py-1 px-2 mt-2 mb-0 text-center" style="font-size:0.95em;">Added!</div> }
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center gap-2 mt-2 justify-content-center">
                                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => ChangeQuantity(it, -1)" disabled="@(cartItem.Quantity <= 1)">-</button>
                                                <span>@cartItem.Quantity</span>
                                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => ChangeQuantity(it, 1)" disabled="@(cartItem.Quantity >= 10)">+</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
                else
            {
                <div class="alert alert-info">No battle passes available at the moment.</div>
            }
        </div>
    </div>
</div>

@code {
    private List<BattlePassResponse>? items;
    private bool loading = true;
    private string? errorMessage;
    private int? addedId;

    protected override async Task OnInitializedAsync()
    {
        await LoadItems();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CartState.LoadFromStorageAsync(JS);
            StateHasChanged();
        }
    }

    private async Task LoadItems()
    {
        try { loading = true; items = (await Api.GetBattlePassesAsync()).ToList(); }
        catch (Exception ex) { errorMessage = $"Error loading: {ex.Message}"; Logger.LogError(ex, "Error"); }
        finally { loading = false; }
    }

    private double CalculateSalePrice(double price, int sale) => price * (1 - sale / 100.0);

    private void ShowDetails(BattlePassResponse bp) { /* Similar modal logic could be added */ }

    private async Task AddToCart(BattlePassResponse bp)
    {
        await JS.InvokeVoidAsync("console.log", $"AddToCart: {bp.Name} (ID: {bp.Id})");
        await CartState.AddToCartAsync(bp);
        addedId = bp.Id;
        StateHasChanged();
        await Task.Delay(1200);
        if (addedId == bp.Id) { addedId = null; StateHasChanged(); }
    }

    private async Task ChangeQuantity(BattlePassResponse bp, int delta) => await CartState.ChangeQuantityAsync(bp, delta);
}
