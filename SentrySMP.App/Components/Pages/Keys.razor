@page "/keys"
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@inject ISentryApi Api
@inject ILogger<Keys> Logger
@inject SentrySMP.App.Components.State.CartState CartState
@inject IJSRuntime JS
@inject IPurchaseTrackingService PurchaseTrackingService
@inject SentrySMP.App.Authentication.UserService UserService
@rendermode InteractiveServer

<PageTitle>Keys - SentrySMP</PageTitle>

<div class="main-wrapper">
    <h1 class="main">Keys</h1>
</div>

            <!-- Server filter dropdown -->
            @if (keys?.Any() == true)
            {
                <div class="mb-3 d-flex align-items-center gap-2">
                    <label for="serverFilter" class="form-label mb-0">Filter by server:</label>
                    <select id="serverFilter" class="form-select w-auto" @onchange="OnServerFilterChanged">
                        <option value="">All servers</option>
                        @foreach (var server in servers)
                        {
                            <option value="@server.Id" selected="@(server.Id == selectedServerId)">@server.Name</option>
                        }
                    </select>
                </div>
            }
            @if (loading)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @errorMessage
                </div>
            }
            else if (filteredKeys?.Any() == true)
            {
                <div class="product-grid">
                    @foreach (var key in filteredKeys)
                    {
                        var cartItem = CartState.CartItems.FirstOrDefault(i => i.Key.Id == key.Id);
                        <div class="product">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(key.Image))
                                {
                                    <img src="@key.Image" class="product-image" alt="@key.Name">
                                }
                                else
                                {
                                    <div class="" style="height: 200px;">
                                        <i class="bi bi-key-fill text-white" style="font-size: 3rem;"></i>
                                    </div>
                                }
                                <div class="">
                                    <h2 class="">@key.Name</h2>
                                    @if (!string.IsNullOrEmpty(key.Description))
                                    {
                                        <p style="font-weight: normal; font-size: 18px">@key.Description</p>
                                    }
                                    <small class="text-muted">Server: @key.Server?.Name</small>
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div class="price-container">
                                                @if (key.Sale > 0)
                                                {
                                                    <p class="original-price" title="Original price">
                                                        €@key.Price.ToString("F2")
                                                    </p>
                                                    <p class="discounted-price" title="Sale price">
                                                        €@(CalculateSalePrice(key.Price, key.Sale).ToString("F2"))
                                                    </p>
                                                    <span class="discount-badge">@key.Sale% OFF</span>
                                                }
                                                else
                                                {
                                                    <strong class="text-primary fs-5">€@key.Price.ToString("F2")</strong>
                                                }
                                            </div>
                                        </div>
                                        @if (key.GlobalMaxOrder.HasValue)
                                        {
                                            <div class="mb-2">
                                                <small class="text-info">
                                                    <i class="bi bi-info-circle"></i> Limited availability
                                                </small>
                                                @if (_purchasedCounts.TryGetValue($"Key_{key.Id}", out var purchased))
                                                {
                                                    <br/>
                                                    <small class="text-warning">
                                                        Sold: @purchased/@key.GlobalMaxOrder
                                                    </small>
                                                }
                                            </div>
                                        }
                                        @{
                                            var remainingQty = GetRemainingQuantity("Key", key.Id, key.GlobalMaxOrder);
                                            var isSoldOut = remainingQty == 0;
                                        }
                                        <div style="display: flex; align-items: center; justify-content: space-between">
                                            <button class="" @onclick="() => ShowKeyDetails(key)">
                                                <i class="bi bi-info-circle"></i> Details
                                            </button>
                                            @if (cartItem == null)
                                            {
                                                <button class="btn btn-outline-success btn-sm w-100 mt-2" @onclick="async () => await AddToCart(key)" disabled="@isSoldOut">
                                                    <i class="bi bi-@(isSoldOut ? "x-circle" : "plus")"></i> @(isSoldOut ? "Sold Out" : "Cart")
                                                </button>

                                            }
                                            else
                                            {
                                                <div style="display: block ruby;">
                                                    <div class="quantity-controls">
                                                        <button class="quantity-btn" @onclick="() => ChangeQuantity(key, -1)" disabled="@(cartItem.Quantity <= 1)">-</button>
                                                        <span class="item-quantity">@cartItem.Quantity</span>
                                                        <button class="quantity-btn" @onclick="() => ChangeQuantity(key, 1)" disabled="@(cartItem.Quantity >= Math.Min(10, remainingQty))">+</button>
                                                    </div>
                                                    <button class="danger" @onclick="async () => await RemoveFromCart(key)" title="Remove from cart">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            }    
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle-fill"></i>
                    No keys available at the moment.
                </div>
            }

<!-- Key Details Modal -->
@if (selectedKey != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">
                        <i class="bi bi-key-fill"></i>
                        @selectedKey.Name
                    </h2>
                    <button type="button" class="btn-close" @onclick="CloseKeyDetails"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @if (!string.IsNullOrEmpty(selectedKey.Image))
                        {
                            <div class="col-md-6">
                                <img src="@selectedKey.Image" class="img-fluid rounded" alt="@selectedKey.Name">
                            </div>
                        }
                        <div class="col-md-@(string.IsNullOrEmpty(selectedKey.Image) ? "12" : "6")">
                            <div class="row" style="padding: 20px">
                                <h2 class="col-sm-8">@selectedKey.Name</h2>
                                @if (!string.IsNullOrEmpty(selectedKey.Description))
                                {
                                    <p class="col-sm-8">@selectedKey.Description</p>
                                }
                                <small class="text-muted">Server: @selectedKey.Server?.Name</small>
                                    <div class="price-container">
                                        @if (selectedKey.Sale > 0)
                                        {
                                            <p class="original-price" title="Original price">
                                                €@selectedKey.Price.ToString("F2")
                                            </p>
                                            <p class="discounted-price" title="Sale price">
                                                €@(CalculateSalePrice(selectedKey.Price, selectedKey.Sale).ToString("F2"))
                                            </p>
                                            <span class="discount-badge">@selectedKey.Sale% OFF</span>
                                        }
                                        else
                                        {
                                            <strong class="text-primary fs-5">€@selectedKey.Price.ToString("F2")</strong>
                                        }
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @{
                        var cartItemModal = CartState.CartItems.FirstOrDefault(i => i.Key.Id == selectedKey!.Id);
                        var remainingQtyModal = GetRemainingQuantity("Key", selectedKey!.Id, selectedKey.GlobalMaxOrder);
                        var isSoldOutModal = remainingQtyModal == 0;
                    }
                    @if (cartItemModal == null)
                    {
                        <button type="button" class="btn btn-outline-success" @onclick="async () => await AddToCart(selectedKey!)" disabled="@isSoldOutModal">
                            <i class="bi bi-cart-plus"></i> @(isSoldOutModal ? "Sold Out" : "Add to Cart")
                        </button>
                    }
                    else
                    {
                        <div style="display: block ruby;">
                            <div class="quantity-controls">
                                <button class="quantity-btn" @onclick="() => ChangeQuantity(selectedKey!, -1)" disabled="@(cartItemModal.Quantity <= 1)">-</button>
                                <span>@cartItemModal.Quantity</span>
                                <button class="quantity-btn" @onclick="() => ChangeQuantity(selectedKey!, 1)" disabled="@(cartItemModal.Quantity >= Math.Min(10, remainingQtyModal))">+</button>
                            </div>
                            <button class="danger" @onclick="async () => await RemoveFromCart(selectedKey!)" title="Remove from cart">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<KeyResponse>? keys;
    private List<KeyResponse>? filteredKeys;
    private List<ServerResponse> servers = new();
    private int? selectedServerId;
    private bool loading = true;
    private string? errorMessage;
    private KeyResponse? selectedKey;

    private bool _cartLoaded = false;
    private Dictionary<string, int> _purchasedCounts = new();
    private string? _username;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadKeys();
        await LoadPurchasedCounts();
    }
    
    private async Task LoadPurchasedCounts()
    {
        try
        {
            foreach (var key in keys ?? new List<KeyResponse>())
            {
                if (key.GlobalMaxOrder.HasValue)
                {
                    var count = await PurchaseTrackingService.GetGlobalPurchasedAsync("Key", key.Id);
                    _purchasedCounts[$"Key_{key.Id}"] = count;
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading purchased counts");
        }
    }

    private int GetRemainingQuantity(string type, int id, int? globalMaxOrder)
    {
        if (!globalMaxOrder.HasValue) return int.MaxValue;
        
        if (_purchasedCounts.TryGetValue($"{type}_{id}", out var purchased))
        {
            return Math.Max(0, globalMaxOrder.Value - purchased);
        }
        
        return globalMaxOrder.Value;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_cartLoaded)
        {
            await CartState.LoadFromStorageAsync(JS);
            _cartLoaded = true;
            StateHasChanged();
        }
    }

    private async Task LoadKeys()
    {
        try
        {
            loading = true;
            errorMessage = null;
            keys = (await Api.GetKeysAsync()).ToList();
            servers = keys
                .Where(k => k.Server != null)
                .Select(k => k.Server!)
                .GroupBy(s => s.Id)
                .Select(g => g.First())
                .OrderBy(s => s.Name)
                .ToList();
            ApplyServerFilter();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading keys: {ex.Message}";
            Logger.LogError(ex, "Error loading keys");
        }
        finally
        {
            loading = false;
        }
    }

    private void ApplyServerFilter()
    {
        if (selectedServerId.HasValue)
        {
            filteredKeys = keys?.Where(k => k.Server?.Id == selectedServerId.Value).ToList();
        }
        else
        {
            filteredKeys = keys;
        }
    }

    private void OnServerFilterChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (int.TryParse(value, out var id))
        {
            selectedServerId = id;
        }
        else
        {
            selectedServerId = null;
        }
        ApplyServerFilter();
        StateHasChanged();
    }

    private void ShowKeyDetails(KeyResponse key)
    {
        selectedKey = key;
    }

    private void CloseKeyDetails()
    {
        selectedKey = null;
    }

    private double CalculateSalePrice(double originalPrice, int salePercentage)
    {
        return originalPrice * (1 - salePercentage / 100.0);
    }

    private int? addedKeyId;
    private async Task AddToCart(KeyResponse key)
    {
        await JS.InvokeVoidAsync("console.log", $"AddToCart: {key.Name} (ID: {key.Id})");
        await CartState.AddToCartAsync(key);
        addedKeyId = key.Id;
        StateHasChanged();
        await Task.Delay(1200);
        if (addedKeyId == key.Id) { addedKeyId = null; StateHasChanged(); }
    }

    private async Task ChangeQuantity(KeyResponse key, int delta)
    {
        await CartState.ChangeQuantityAsync(key, delta);
    }

    private async Task RemoveFromCart(KeyResponse key)
    {
        await CartState.RemoveFromCartAsync(key);
        StateHasChanged();
    }

    private async Task AddSelectedToCart()
    {
        if (selectedKey != null)
        {
            // Reuse the same AddToCart flow so UI feedback (Přidáno!) is consistent
            await AddToCart(selectedKey);
        }
    }

    // (No custom ServerDto needed, using ServerResponse from DTOs)
}