@page "/bundles"
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@inject ISentryApi Api
@inject ILogger<Bundles> Logger
@inject SentrySMP.App.Components.State.CartState CartState
@inject IJSRuntime JS
@inject IPurchaseTrackingService PurchaseTrackingService
@inject SentrySMP.App.Authentication.UserService UserService
@rendermode InteractiveServer

<PageTitle>Bundles - SentrySMP</PageTitle>

<div class="main-wrapper">
    <h1 class="main">Bundles</h1>
</div>
            @if (bundles?.Any() == true)
            {
                <div class="mb-3 d-flex align-items-center gap-2">
                    <label for="serverFilter" class="form-label mb-0">Filter by server:</label>
                    <select id="serverFilter" class="form-select w-auto" @onchange="OnServerFilterChanged">
                        <option value="">All servers</option>
                        @foreach (var server in servers)
                        {
                            <option value="@server.Id" selected="@(server.Id == selectedServerId)">@server.Name</option>
                        }
                    </select>
                </div>
            }

            @if (loading)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @errorMessage
                </div>
            }
            else if (filteredBundles?.Any() == true)
            {
                <div class="product-grid">
                    @foreach (var bundle in filteredBundles)
                    {
                        var cartItem = CartState.CartItems.FirstOrDefault(i => i.Key.Id == bundle.Id);
                        <div class="product">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(bundle.Image))
                                {
                                    <img src="@bundle.Image" class="product-image" alt="@bundle.Name">
                                }
                                else
                                {
                                    <div class="" style="height: 200px;">
                                        <i class="bi bi-gift-fill text-white" style="font-size: 3rem;"></i>
                                    </div>
                                }
                                <div class="">
                                    <h2 class="">@bundle.Name</h2>
                                    @if (!string.IsNullOrEmpty(bundle.Description))
                                    {
                                        <p style="font-weight: normal; font-size: 18px">@bundle.Description</p>
                                    }
                                    <small class="text-muted">Server: @bundle.Server?.Name</small>
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div class="price-container">
                                                @if (bundle.Sale > 0)
                                                {
                                                    <p class="original-price" title="Original price">€@bundle.Price.ToString("F2")</p>
                                                    <p class="discounted-price" title="Sale price">€@(CalculateSalePrice(bundle.Price, bundle.Sale).ToString("F2"))</p>
                                                    <span class="discount-badge">@bundle.Sale% OFF</span>
                                                }
                                                else
                                                {
                                                    <strong class="text-primary fs-5">€@bundle.Price.ToString("F2")</strong>
                                                }
                                            </div>
                                        </div>
                                        @if (bundle.GlobalMaxOrder.HasValue)
                                        {
                                            <div class="mb-2">
                                                <small class="text-info">
                                                    <i class="bi bi-info-circle"></i> Limited availability
                                                    @if (_purchasedCounts.TryGetValue($"Bundle_{bundle.Id}", out var purchased))
                                                    {
                                                        <br /><span class="text-warning">Sold: @purchased/@bundle.GlobalMaxOrder</span>
                                                    }
                                                </small>
                                            </div>
                                        }
                                        <div style="display: flex; align-items: center; justify-content: space-between">
                                            <button class="" @onclick="() => ShowBundleDetails(bundle)"><i class="bi bi-info-circle"></i> Details</button>
                                            @if (cartItem == null)
                                            {
                                                <button class="btn btn-outline-success btn-sm w-100 mt-2" @onclick="async () => await AddToCart(bundle)"><i class="bi bi-cart-plus"></i> Add</button>
                                                @if (addedBundleId == bundle.Id)
                                                {
                                                    <div class="alert alert-success py-1 px-2 mt-2 mb-0 text-center" style="font-size:0.95em;">Přidáno!</div>
                                                }
                                            }
                                            else
                                            {
                                                <div class="quantity-controls">
                                                    <button class="quantity-btn" @onclick="() => ChangeQuantity(bundle, -1)" disabled="@(cartItem.Quantity <= 1)">-</button>
                                                    <span class="item-quantity">@cartItem.Quantity</span>
                                                    <button class="quantity-btn" @onclick="() => ChangeQuantity(bundle, 1)" disabled="@(cartItem.Quantity >= 10)">+</button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle-fill"></i>
                    No bundles available at the moment.
                </div>
            }

@if (selectedBundle != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">
                        <i class="bi bi-gift-fill"></i>
                        @selectedBundle.Name
                    </h2>
                    <button type="button" class="btn-close" @onclick="CloseBundleDetails"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @if (!string.IsNullOrEmpty(selectedBundle.Image))
                        {
                            <div class="col-md-6">
                                <img src="@selectedBundle.Image" class="img-fluid rounded" alt="@selectedBundle.Name">
                            </div>
                        }
                        <div class="col-md-@(string.IsNullOrEmpty(selectedBundle.Image) ? "12" : "6")">
                            <div class="row" style="padding: 20px">
                                <h2 class="col-sm-8">@selectedBundle.Name</h2>
                                @if (!string.IsNullOrEmpty(selectedBundle.Description))
                                {
                                    <p class="col-sm-8">@selectedBundle.Description</p>
                                }
                                <small class="text-muted">Server: @selectedBundle.Server?.Name</small>
                                    <div class="price-container">
                                        @if (selectedBundle.Sale > 0)
                                        {
                                            <p class="original-price" title="Original price">€@selectedBundle.Price.ToString("F2")</p>
                                            <p class="discounted-price" title="Sale price">€@(CalculateSalePrice(selectedBundle.Price, selectedBundle.Sale).ToString("F2"))</p>
                                            <span class="discount-badge">@selectedBundle.Sale% OFF</span>
                                        }
                                        else
                                        {
                                            <strong class="text-primary fs-5">€@selectedBundle.Price.ToString("F2")</strong>
                                        }
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @{
                        var cartItemModal = CartState.CartItems.FirstOrDefault(i => i.Key.Id == selectedBundle!.Id);
                    }
                    @if (cartItemModal == null)
                    {
                        <button type="button" class="btn btn-outline-success" @onclick="async () => await AddToCart(selectedBundle!)">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                        @if (addedBundleId == selectedBundle!.Id)
                        {
                            <div class="alert alert-success py-1 px-2 ms-2 mb-0" style="font-size:0.95em;">Přidáno!</div>
                        }
                    }
                    else
                    {
                        <div class="quantity-controls">
                            <button class="quantity-btn" @onclick="() => ChangeQuantity(selectedBundle!, -1)" disabled="@(cartItemModal.Quantity <= 1)">-</button>
                            <span>@cartItemModal.Quantity</span>
                            <button class="quantity-btn" @onclick="() => ChangeQuantity(selectedBundle!, 1)" disabled="@(cartItemModal.Quantity >= 10)">+</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<BundleResponse>? bundles;
    private List<BundleResponse>? filteredBundles;
    private List<ServerResponse> servers = new();
    private int? selectedServerId;
    private bool loading = true;
    private string? errorMessage;
    private BundleResponse? selectedBundle;

    private bool _cartLoaded = false;
    
    private Dictionary<string, int> _purchasedCounts = new();
    private string? _username;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadBundles();
        await LoadPurchasedCounts();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_cartLoaded)
        {
            await CartState.LoadFromStorageAsync(JS);
            _cartLoaded = true;
            StateHasChanged();
        }
    }

    private async Task LoadBundles()
    {
        try
        {
            loading = true;
            errorMessage = null;
            bundles = (await Api.GetBundlesAsync()).ToList();
            servers = bundles
                .Where(b => b.Server != null)
                .Select(b => b.Server!)
                .GroupBy(s => s.Id)
                .Select(g => g.First())
                .OrderBy(s => s.Name)
                .ToList();
            ApplyServerFilter();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading bundles: {ex.Message}";
            Logger.LogError(ex, "Error loading bundles");
        }
        finally
        {
            loading = false;
        }
    }

    private void ApplyServerFilter()
    {
        if (selectedServerId.HasValue)
        {
            filteredBundles = bundles?.Where(k => k.Server?.Id == selectedServerId.Value).ToList();
        }
        else
        {
            filteredBundles = bundles;
        }
    }

    private void OnServerFilterChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (int.TryParse(value, out var id))
        {
            selectedServerId = id;
        }
        else
        {
            selectedServerId = null;
        }
        ApplyServerFilter();
        StateHasChanged();
    }

    private void ShowBundleDetails(BundleResponse bundle)
    {
        selectedBundle = bundle;
    }

    private void CloseBundleDetails()
    {
        selectedBundle = null;
    }

    private double CalculateSalePrice(double originalPrice, int salePercentage)
    {
        return originalPrice * (1 - salePercentage / 100.0);
    }

    private int? addedBundleId;
    private async Task AddToCart(BundleResponse bundle)
    {
        await JS.InvokeVoidAsync("console.log", $"AddToCart: {bundle.Name} (ID: {bundle.Id})");
        // Bundles share the same cart item model as keys (KeyResponse is used by CartState). To keep it simple we
        // temporarily cast via a minimal wrapper: CartState expects KeyResponse; if desired, CartState could be
        // extended to accept a common ProductResponse.
        // For now, add using reflection-like copy into a KeyResponse shape.
        var keyLike = new KeyResponse
        {
            Id = bundle.Id,
            Name = bundle.Name,
            Description = bundle.Description,
            Price = bundle.Price,
            ServerId = bundle.ServerId,
            Sale = bundle.Sale,
            Image = bundle.Image,
            Server = bundle.Server
        };
        await CartState.AddToCartAsync(keyLike);
        addedBundleId = bundle.Id;
        StateHasChanged();
        await Task.Delay(1200);
        if (addedBundleId == bundle.Id) { addedBundleId = null; StateHasChanged(); }
    }

    private async Task ChangeQuantity(BundleResponse bundle, int delta)
    {
        // same approach as AddToCart
        var keyLike = new KeyResponse
        {
            Id = bundle.Id,
            Name = bundle.Name,
            Description = bundle.Description,
            Price = bundle.Price,
            ServerId = bundle.ServerId,
            Sale = bundle.Sale,
            Image = bundle.Image,
            Server = bundle.Server
        };
        await CartState.ChangeQuantityAsync(keyLike, delta);
    }

    private async Task AddSelectedToCart()
    {
        if (selectedBundle != null)
        {
            await AddToCart(selectedBundle);
        }
    }

    private async Task LoadPurchasedCounts()
    {
        if (bundles == null) return;
        
        foreach (var bundle in bundles.Where(b => b.GlobalMaxOrder.HasValue))
        {
            var count = await PurchaseTrackingService.GetGlobalPurchasedAsync("Bundle", bundle.Id);
            _purchasedCounts[$"Bundle_{bundle.Id}"] = count;
        }
    }
}
