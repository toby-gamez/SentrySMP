{
  "ConnectionStrings": {
    "DefaultConnection": "server=YOUR_SERVER;user=YOUR_USER;password=YOUR_PASSWORD;database=YOUR_DATABASE;Encrypt=False"
  },
  "Auth": {
    "Basic": {
      "Username": "YOUR_USERNAME",
      "Password": "YOUR_PASSWORD",
      "UserId": "YOUR_USER_ID"
    }
  },
  "Api": {
    "BaseAddress": "https://localhost:7271"
  },
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Tobiso.Web.App.Handlers": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Tobiso.Web.App.Handlers": "Debug",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "C:/Logs/yourapp.dev.log",
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ]
  }
}