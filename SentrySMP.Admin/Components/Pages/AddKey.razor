@page "/add-key"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations
@inject ISentryApi Api
@inject ILogger<AddKey> Logger
@inject NavigationManager Navigation
<PageTitle>Add Key - SentrySMP Admin</PageTitle>


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>
                        <i class="bi bi-plus-circle me-2"></i>
                        Add Key
                    </h1>
                    <p class="text-muted">Create a new key</p>
                </div>
                <button class="btn btn-outline-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left"></i> Back to Keys
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @errorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @successMessage
                </div>
            }

            <EditForm Model="keyModel" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />

                <div class="row">
                    <div class="col-lg-6">
                        <div class="mb-4">
                            <h4 class="text-primary mb-3">
                                <i class="bi bi-info-circle me-2"></i>
                                Basic Information
                            </h4>

                            <div class="mb-3">
                                <label class="form-label">Key Name *</label>
                                <InputText @bind-Value="keyModel.Name" class="form-control form-control-lg" placeholder="Enter key name" />
                                <ValidationMessage For="() => keyModel.Name" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Price *</label>
                                <div class="input-group">
                                    <span class="input-group-text">â‚¬</span>
                                    <InputNumber @bind-Value="keyModel.Price" class="form-control" placeholder="0.00" step="0.01" />
                                </div>
                                <ValidationMessage For="() => keyModel.Price" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Server *</label>
                                <InputSelect @bind-Value="keyModel.ServerId" class="form-select">
                                    <option value="">Select a server...</option>
                                    @if (servers != null)
                                    {
                                        @foreach (var server in servers)
                                        {
                                            <option value="@server.Id">@server.Name</option>
                                        }
                                    }
                                </InputSelect>
                                <ValidationMessage For="() => keyModel.ServerId" class="text-danger" />
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="mb-4">
                            <h4 class="text-primary mb-3">
                                <i class="bi bi-image me-2"></i>
                                Additional Details
                            </h4>

                            <ImageUploader Label="Key Image" 
                                         ImageUrl="@keyModel.Image" 
                                         ImageUrlChanged="@((string? url) => keyModel.Image = url)" />

                            <div class="mb-3">
                                <label class="form-label">Sale Percentage (0-100%)</label>
                                <div class="input-group">
                                    <InputNumber @bind-Value="keyModel.Sale" class="form-control" placeholder="0" min="0" max="100" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text">Enter 0 for no sale, or discount percentage</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Global Max Order (Optional)</label>
                                <InputNumber @bind-Value="keyModel.GlobalMaxOrder" class="form-control" placeholder="Leave empty for unlimited" min="1" />
                                <div class="form-text">Maximum total quantity per user across all orders (leave empty for unlimited)</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <InputTextArea @bind-Value="keyModel.Description" class="form-control" rows="4" placeholder="Enter key description..." />
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <div class="mb-4">
                    <h5>Commands</h5>
                       <div class="form-text text-muted mb-2">For replacing string with name use %player%.</div>
                    @if (keyModel.Commands == null || !keyModel.Commands.Any())
                    {
                        <div class="text-muted">No commands added.</div>
                    }
                    @for (int i = 0; i < (keyModel.Commands?.Count ?? 0); i++)
                    {
                        var idx = i;
                        var cmd = keyModel.Commands![idx];
                        <div class="input-group mb-2">
                            <InputText @bind-Value="cmd.CommandText" class="form-control" />
                            <button type="button" class="btn btn-outline-danger" @onclick="() => RemoveCommand(idx)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    }
                    <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AddCommand">
                        <i class="bi bi-plus"></i> Add Command
                    </button>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="d-flex gap-2 justify-content-end">
                            <button type="button" class="btn btn-outline-secondary" @onclick="GoBack">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg px-4" disabled="@saving">
                                @if (saving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <text>Creating Key...</text>
                                }
                                else
                                {
                                    <i class="bi bi-plus-circle me-1"></i>
                                    <text>Create Key</text>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private KeyModel keyModel = new();
    private List<ServerResponse>? servers;
    private bool saving = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadServers();
    }

    private async Task LoadServers()
    {
        try
        {
            servers = (await Api.GetServersAsync()).ToList();
        }
        catch (Exception ex)
        {
            servers = new List<ServerResponse>();
            errorMessage = $"Error loading servers: {ex.Message}";
            Logger.LogError(ex, "Error loading servers");
        }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            saving = true;
            errorMessage = null;
            successMessage = null;

            var createDto = new CreateKeyDto
            {
                Name = keyModel.Name,
                Description = keyModel.Description ?? "",
                Price = keyModel.Price,
                ServerId = keyModel.ServerId,
                Sale = keyModel.Sale,
                Image = keyModel.Image,
                GlobalMaxOrder = keyModel.GlobalMaxOrder
            };

            if (keyModel.Commands != null && keyModel.Commands.Any())
            {
                createDto.Commands = keyModel.Commands.Select(c => new CreateCommandDto { CommandText = c.CommandText }).ToList();
            }
            await Api.CreateKeyAsync(createDto);
            
            successMessage = "Key created successfully!";
            
            // Redirect after a short delay to show success message
            await Task.Delay(1500);
            Navigation.NavigateTo("/keys");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating key: {ex.Message}";
            Logger.LogError(ex, "Error creating key");
        }
        finally
        {
            saving = false;
        }
    }

    private class KeyModel
    {
        [Required]
        [MaxLength(100)]
        public string Name { get; set; } = "";
        
        [MaxLength(500)]
        public string Description { get; set; } = "";
        
        [Range(0, double.MaxValue)]
        public double Price { get; set; }
        
        [Required]
        public int ServerId { get; set; }
        
        public int Sale { get; set; } = 0;
        
        public int? GlobalMaxOrder { get; set; }
        
        public string? Image { get; set; }
        // Commands to attach to the new key
        public List<CommandInputModel>? Commands { get; set; } = new();
    }

    private class CommandInputModel
    {
        public string CommandText { get; set; } = string.Empty;
    }

    private void AddCommand()
    {
        if (keyModel.Commands == null)
            keyModel.Commands = new List<CommandInputModel>();
        keyModel.Commands.Add(new CommandInputModel());
    }

    private void RemoveCommand(int index)
    {
        if (keyModel.Commands == null) return;
        if (index < 0 || index >= keyModel.Commands.Count) return;
        keyModel.Commands.RemoveAt(index);
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/keys");
    }
}