@page "/shards"
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@inject ISentryApi Api
@inject ILogger<Shards> Logger
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Shards - SentrySMP Admin</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-box-fill text-primary me-2"></i>
                    Shard Management
                </h1>
                <a href="/add-shard" class="btn btn-success">
                    <i class="bi bi-plus-circle-fill me-2"></i>
                    Create New Shard
                </a>
            </div>
            @if (loading)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @errorMessage
                </div>
            }
            else if (shards?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="bi bi-image me-1"></i>Image</th>
                                <th><i class="bi bi-box me-1"></i>Name</th>
                                <th><i class="bi bi-file-text me-1"></i>Description</th>
                                <th><i class="bi bi-currency-euro me-1"></i>Price</th>
                                <th><i class="bi bi-server me-1"></i>Server</th>
                                <th><i class="bi bi-percent me-1"></i>Sale</th>
                                <th><i class="bi bi-terminal me-1"></i>Commands</th>
                                <th><i class="bi bi-gear me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var shard in shards)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(shard.Image))
                                        {
                                            <img src="@shard.Image" alt="@shard.Name" style="width: 50px; height: 50px; object-fit: cover;" class="rounded">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                <i class="bi bi-box-fill text-white"></i>
                                            </div>
                                        }
                                    </td>
                                    <td><strong>@shard.Name</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(shard.Description))
                                        {
                                            @(shard.Description.Length > 50 ? shard.Description.Substring(0, 50) + "..." : shard.Description)
                                        }
                                    </td>
                                    <td>
                                        <strong class="text-success">
                                            <i class="bi bi-currency-euro me-1"></i>
                                            @shard.Price.ToString("F2")
                                        </strong>
                                    </td>
                                    <td>
                                        @if (shard.Server != null)
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-server me-1"></i>
                                                @shard.Server.Name
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-server me-1"></i>
                                                Unknown
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (shard.Sale > 0)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-percent me-1"></i>
                                                @shard.Sale% OFF
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-dash-circle me-1"></i>
                                                Regular
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (shard.Commands != null && shard.Commands.Any())
                                        {
                                            var cmdText = string.Join(", ", shard.Commands.Select(c => c.CommandText));
                                            <span class="badge bg-info" title="@cmdText">
                                                <i class="bi bi-terminal me-1"></i>
                                                @shard.Commands.Count
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">â€”</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/edit-shard/@shard.Id" class="btn btn-sm btn-outline-primary" title="Edit Shard" data-bs-toggle="tooltip">
                                                <i class="bi bi-pencil-square me-1"></i>
                                                Edit
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteShard(shard.Id)" title="Delete Shard" data-bs-toggle="tooltip">
                                                <i class="bi bi-trash3-fill me-1"></i>
                                                Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle-fill"></i>
                    No shards found.
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<ShardResponse>? shards;
    private bool loading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadShards();
    }

    private async Task LoadShards()
    {
        try
        {
            loading = true;
            errorMessage = null;
            shards = (await Api.GetShardsAsync()).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading shards: {ex.Message}";
            Logger.LogError(ex, "Error loading shards");
        }
        finally
        {
            loading = false;
        }
    }

    private async Task DeleteShard(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete this shard?"))
            return;
        try
        {
            await Api.DeleteShardAsync(id);
            await LoadShards();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting shard: {ex.Message}";
            Logger.LogError(ex, "Error deleting shard");
        }
    }
}
