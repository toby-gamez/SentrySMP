@page "/bundles"
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@inject ISentryApi Api
@inject ILogger<Bundles> Logger
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-gift-fill text-primary me-2"></i>
                    Bundle Management
                </h1>
                <a href="/add-bundle" class="btn btn-success">
                    <i class="bi bi-plus-circle-fill me-2"></i>
                    Create New Bundle
                </a>
            </div>

            @if (loading)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @errorMessage
                </div>
            }
            else if (bundles?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="bi bi-image me-1"></i>Image</th>
                                <th><i class="bi bi-gift me-1"></i>Name</th>
                                <th><i class="bi bi-file-text me-1"></i>Description</th>
                                <th><i class="bi bi-currency-dollar me-1"></i>Price</th>
                                <th><i class="bi bi-server me-1"></i>Server</th>
                                <th><i class="bi bi-percent me-1"></i>Sale</th>
                                <th><i class="bi bi-gear me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bundle in bundles)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(bundle.Image))
                                        {
                                            <img src="@bundle.Image" alt="@bundle.Name" style="width: 50px; height: 50px; object-fit: cover;" class="rounded">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                <i class="bi bi-gift-fill text-white"></i>
                                            </div>
                                        }
                                    </td>
                                    <td><strong>@bundle.Name</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(bundle.Description))
                                        {
                                            @(bundle.Description.Length > 50 ? bundle.Description.Substring(0, 50) + "..." : bundle.Description)
                                        }
                                    </td>
                                    <td>
                                        <strong class="text-success">
                                            <i class="bi bi-currency-dollar me-1"></i>
                                            @bundle.Price.ToString("F2")
                                        </strong>
                                    </td>
                                    <td>
                                        @{ var server = servers?.FirstOrDefault(s => s.Id == bundle.ServerId); var serverName = server?.Name ?? $"Server {bundle.ServerId}"; }
                                        <span class="badge bg-info">
                                            <i class="bi bi-server me-1"></i>
                                            @serverName
                                        </span>
                                    </td>
                                    <td>
                                        @if (bundle.Sale > 0)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-percent me-1"></i>
                                                @bundle.Sale% OFF
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-dash-circle me-1"></i>
                                                Regular
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/edit-bundle/@bundle.Id" class="btn btn-sm btn-outline-primary" title="Edit Bundle" data-bs-toggle="tooltip">
                                                <i class="bi bi-pencil-square me-1"></i>
                                                Edit
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteBundle(bundle.Id, bundle.Name)" title="Delete Bundle" data-bs-toggle="tooltip">
                                                <i class="bi bi-trash3-fill me-1"></i>
                                                Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle-fill"></i>
                    No bundles found. Create your first bundle!
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<BundleResponse>? bundles;
    private List<ServerResponse>? servers;
    private bool loading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        await Task.WhenAll(LoadBundles(), LoadServers());
    }

    private async Task LoadBundles()
    {
        try
        {
            loading = true;
            errorMessage = null;
            bundles = (await Api.GetBundlesAsync()).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading bundles: {ex.Message}";
            Logger.LogError(ex, "Error loading bundles");
        }
        finally
        {
            loading = false;
        }
    }

    private async Task LoadServers()
    {
        try
        {
            servers = (await Api.GetServersAsync()).ToList();
        }
        catch (Exception ex)
        {
            servers = new List<ServerResponse>();
            if (string.IsNullOrEmpty(errorMessage))
                errorMessage = $"Error loading servers: {ex.Message}";
            Logger.LogError(ex, "Error loading servers");
        }
    }

    private async Task DeleteBundle(int bundleId, string bundleName)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete the bundle '{bundleName}'?"))
        {
            try
            {
                await Api.DeleteBundleAsync(bundleId);
                await JSRuntime.InvokeVoidAsync("alert", "Bundle deleted successfully!");
                await LoadBundles();
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting bundle: {ex.Message}");
                Logger.LogError(ex, "Error deleting bundle {BundleId}", bundleId);
            }
        }
    }
}
