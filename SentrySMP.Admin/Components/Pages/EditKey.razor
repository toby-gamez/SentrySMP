@page "/edit-key/{id:int}"
@rendermode InteractiveServer
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@using System.ComponentModel.DataAnnotations
@inject ISentryApi Api
@inject ILogger<EditKey> Logger
@inject NavigationManager Navigation

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>
                        <i class="bi bi-pencil-square me-2"></i>
                        Edit Key
                    </h1>
                    <p class="text-muted">Update key configuration</p>
                </div>
                <button class="btn btn-outline-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left"></i> Back to Keys
                </button>
            </div>
        </div>
    </div>
    
    @if (loading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (keyNotFound)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Key with ID @Id not found.
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @errorMessage
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        @successMessage
                    </div>
                }
                
                <EditForm Model="keyModel" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <h4 class="text-primary mb-3">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Basic Information
                                </h4>
                                
                                <div class="mb-3">
                                    <label class="form-label">Key Name *</label>
                                    <InputText @bind-Value="keyModel.Name" class="form-control form-control-lg" placeholder="Enter key name" />
                                    <ValidationMessage For="() => keyModel.Name" class="text-danger" />
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Price *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <InputNumber @bind-Value="keyModel.Price" class="form-control" placeholder="0.00" step="0.01" />
                                    </div>
                                    <ValidationMessage For="() => keyModel.Price" class="text-danger" />
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Server *</label>
                                    <InputSelect @bind-Value="keyModel.ServerId" class="form-select">
                                        <option value="">Select a server...</option>
                                        @if (servers != null)
                                        {
                                            @foreach (var server in servers)
                                            {
                                                <option value="@server.Id">@server.Name</option>
                                            }
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="() => keyModel.ServerId" class="text-danger" />
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <h4 class="text-primary mb-3">
                                    <i class="bi bi-image me-2"></i>
                                    Additional Details
                                </h4>
                                
                                <ImageUploader Label="Key Image" 
                                             ImageUrl="@keyModel.Image" 
                                             ImageUrlChanged="@((string? url) => keyModel.Image = url)" />
                                
                                <div class="mb-3">
                                    <label class="form-label">Sale Percentage (0-100%)</label>
                                    <div class="input-group">
                                        <InputNumber @bind-Value="keyModel.Sale" class="form-control" placeholder="0" min="0" max="100" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <div class="form-text">Enter 0 for no sale, or discount percentage</div>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <InputTextArea @bind-Value="keyModel.Description" class="form-control" rows="4" placeholder="Enter key description..." />
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex gap-2 justify-content-end">
                                <button type="button" class="btn btn-outline-secondary" @onclick="GoBack">
                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-primary btn-lg px-4" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <text>Updating Key...</text>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle me-1"></i>
                                        <text>Update Key</text>
                                    }
                                </button>
                            </div>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    
    private KeyModel keyModel = new();
    private List<ServerResponse>? servers;
    private bool isSaving = false;
    private bool loading = true;
    private bool keyNotFound = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await Task.WhenAll(LoadKey(), LoadServers());
    }

    private async Task LoadKey()
    {
        try
        {
            var key = await Api.GetKeyAsync(Id);
            
            keyModel = new KeyModel
            {
                Name = key.Name,
                Description = key.Description,
                Price = key.Price,
                ServerId = key.ServerId,
                Sale = key.Sale,
                Image = key.Image
            };
        }
        catch (Exception ex)
        {
            if (ex.Message.Contains("404") || ex.Message.Contains("Not Found"))
            {
                keyNotFound = true;
            }
            else
            {
                errorMessage = $"Error loading key: {ex.Message}";
                Logger.LogError(ex, "Error loading key {KeyId}", Id);
            }
        }
        finally
        {
            loading = false;
        }
    }

    private async Task LoadServers()
    {
        try
        {
            servers = (await Api.GetServersAsync()).ToList();
        }
        catch (Exception ex)
        {
            servers = new List<ServerResponse>(); // Prevent null reference
            if (string.IsNullOrEmpty(errorMessage))
                errorMessage = $"Error loading servers: {ex.Message}";
            Logger.LogError(ex, "Error loading servers");
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/keys");
    }

    private async Task HandleValidSubmit()
    {
        UpdateKeyDto? updateDto = null;
        
        try
        {
            isSaving = true;
            errorMessage = null;
            successMessage = null;
            
            updateDto = new UpdateKeyDto
            {
                Name = keyModel.Name,
                Description = keyModel.Description ?? "",
                Price = keyModel.Price,
                ServerId = keyModel.ServerId,
                Sale = keyModel.Sale,
                Image = keyModel.Image
            };
            
            Logger.LogInformation("Updating key {KeyId} with data: Name={Name}, Price={Price}, ServerId={ServerId}", 
                Id, updateDto.Name, updateDto.Price, updateDto.ServerId);
            
            await Api.UpdateKeyAsync(Id, updateDto);
            
            successMessage = "Key updated successfully! Redirecting...";
            StateHasChanged();
            
            await Task.Delay(1500);
            Navigation.NavigateTo("/keys");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating key {KeyId}. Data was: Name={Name}, Price={Price}, ServerId={ServerId}", 
                Id, updateDto?.Name ?? "null", updateDto?.Price ?? 0, updateDto?.ServerId ?? 0);
            
            if (ex.Message.Contains("400"))
            {
                errorMessage = $"Validation error: Please check that all required fields are filled correctly. Details: {ex.Message}";
            }
            else
            {
                errorMessage = $"Error updating key: {ex.Message}";
            }
        }
        finally
        {
            isSaving = false;
        }
    }

    private class KeyModel
    {
        [Required]
        [MaxLength(100)]
        public string Name { get; set; } = "";
        
        [MaxLength(500)]
        public string? Description { get; set; }
        
        [Required]
        [Range(0.01, double.MaxValue, ErrorMessage = "Price must be greater than 0")]
        public double Price { get; set; }
        
        [Required(ErrorMessage = "Please select a server")]
        public int ServerId { get; set; }
        
        [Range(0, 100)]
        public int Sale { get; set; }
        
        [MaxLength(500)]
        public string? Image { get; set; }
    }
}