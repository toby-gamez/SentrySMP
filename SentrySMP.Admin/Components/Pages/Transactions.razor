@page "/transactions"
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@inject ISentryApi Api
@inject ILogger<Transactions> Logger
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Transactions - SentrySMP Admin</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-wallet2 text-primary me-2"></i>
                    Transactions
                </h1>
            </div>

            @if (loading)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @errorMessage
                </div>
            }
            else if (transactions?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Id</th>
                                <th>Provider</th>
                                <th>Provider Tx Id</th>
                                <th>Amount</th>
                                <th>Currency</th>
                                <th>Username</th>
                                <th>Status</th>
                                <th>Created At (UTC)</th>
                                <th>Items JSON</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tx in transactions)
                            {
                                <tr>
                                    <td>@tx.Id</td>
                                    <td>@tx.Provider</td>
                                    <td>@tx.ProviderTransactionId</td>
                                    <td><strong class="text-success">@tx.Amount.ToString("F2")</strong></td>
                                    <td>@tx.Currency</td>
                                    <td>@tx.MinecraftUsername</td>
                                    <td>@tx.Status</td>
                                    <td>@tx.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@tx.ItemsJson</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle-fill"></i>
                    No transactions found.
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<TransactionResponse>? transactions;
    private bool loading = true;
    private string? errorMessage;

    private bool isInitialized = false;

    protected override async Task OnInitializedAsync()
    {
        if (!isInitialized)
        {
            isInitialized = true;
            await LoadTransactions();
        }
    }

    private async Task LoadTransactions()
    {
        try
        {
            loading = true;
            errorMessage = null;
            var list = await Api.GetTransactionsAsync();
            transactions = list.OrderByDescending(t => t.CreatedAt).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading transactions: {ex.Message}";
            Logger.LogError(ex, "Error loading transactions");
        }
        finally
        {
            loading = false;
        }
    }
}
