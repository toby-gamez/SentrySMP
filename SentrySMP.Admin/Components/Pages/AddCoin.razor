@using Microsoft.AspNetCore.Components.Forms
@page "/add-coins"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations
@using SentrySMP.Shared.DTOs
@inject ISentryApi Api
@inject ILogger<AddCoin> Logger
@inject NavigationManager Navigation

<PageTitle>Add Coin - SentrySMP Admin</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>
                        <i class="bi bi-plus-circle me-2"></i>
                        Add Coins
                    </h1>
                    <p class="text-muted">Create coins configuration</p>
                </div>
                <button class="btn btn-outline-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left"></i> Back to Coins
                </button>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @errorMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @successMessage
        </div>
    }

    <EditForm Model="coinModel" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <InputText class="form-control" @bind-Value="coinModel.Name" />
                    <ValidationMessage For="() => coinModel.Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <InputTextArea class="form-control" @bind-Value="coinModel.Description" />
                    <ValidationMessage For="() => coinModel.Description" />
                </div>
                <div class="mb-3">
                    <ImageUploader Label="Coin Image"
                                   ImageUrl="@coinModel.Image"
                                   ImageUrlChanged="@((string? url) => coinModel.Image = url)" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <InputNumber class="form-control" @bind-Value="coinModel.Price" />
                    <ValidationMessage For="() => coinModel.Price" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Sale (%)</label>
                    <InputNumber class="form-control" @bind-Value="coinModel.Sale" />
                    <ValidationMessage For="() => coinModel.Sale" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Server</label>
                    <InputSelect class="form-select" @bind-Value="coinModel.ServerId">
                        <option value="">Select server</option>
                        @foreach (var server in servers)
                        {
                            <option value="@server.Id">@server.Name</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="() => coinModel.ServerId" />
                </div>
            </div>
        </div>
        <div class="mb-3 mt-3">
            <label class="form-label">Commands</label>
            <div class="form-text text-muted mb-2">For replacing string with name use %player%.</div>
            @if (coinCommands == null || !coinCommands.Any())
            {
                <div class="text-muted">No commands attached.</div>
            }
            @for (int i = 0; i < (coinCommands?.Count ?? 0); i++)
            {
                var idx = i;
                var cmd = coinCommands![idx];
                <div class="input-group mb-2">
                    <InputText @bind-Value="cmd.CommandText" class="form-control" />
                    <button type="button" class="btn btn-outline-danger" @onclick="() => RemoveCoinCommand(idx)">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            }
            <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AddCoinCommand">
                <i class="bi bi-plus"></i> Add Command
            </button>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="d-flex gap-2 justify-content-end">
                    <button type="button" class="btn btn-outline-secondary" @onclick="GoBack">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-primary btn-lg w-100 mt-3">
                        <i class="bi bi-plus-circle"></i> Create Coin
                    </button>
                </div>
            </div>
        </div>
    </EditForm>
</div>

@code {
    private CreateCoinDto coinModel = new();
    private List<ServerResponse> servers = new();
    private string? errorMessage;
    private string? successMessage;
    private List<CommandInputModel>? coinCommands = new();
    private bool isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        servers = (await Api.GetServersAsync()).ToList();
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            isSaving = true;
            errorMessage = null;
            successMessage = null;
            if (coinCommands != null && coinCommands.Any())
            {
                coinModel.Commands = coinCommands.Select(c => new CreateCommandDto { CommandText = c.CommandText }).ToList();
            }
            await Api.CreateCoinAsync(coinModel);
            successMessage = "Coin created successfully!";
            Navigation.NavigateTo("/coins");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating coin: {ex.Message}";
            Logger.LogError(ex, "Error creating coin");
        }
        finally
        {
            isSaving = false;
        }
    }

    private class CommandInputModel
    {
        public string CommandText { get; set; } = string.Empty;
    }

    private void AddCoinCommand()
    {
        if (coinCommands == null) coinCommands = new List<CommandInputModel>();
        coinCommands.Add(new CommandInputModel());
    }

    private void RemoveCoinCommand(int index)
    {
        if (coinCommands == null) return;
        if (index < 0 || index >= coinCommands.Count) return;
        coinCommands.RemoveAt(index);
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/coins");
    }
}
