@page "/edit-server/{id:int}"
@rendermode InteractiveServer
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@using System.ComponentModel.DataAnnotations
@inject ISentryApi Api
@inject ILogger<EditServer> Logger
@inject NavigationManager Navigation

<PageTitle>Edit Server - SentrySMP Admin</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>
                        <i class="bi bi-pencil-square me-2"></i>
                        Edit Server
                    </h1>
                    <p class="text-muted">Update server configuration</p>
                </div>
                <button class="btn btn-outline-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left"></i> Back to Servers
                </button>
            </div>
        </div>
    </div>
    
    @if (loading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (serverNotFound)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Server with ID @Id not found.
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @errorMessage
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        @successMessage
                    </div>
                }
                
                <EditForm Model="serverModel" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <h4 class="text-primary mb-3">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Basic Information
                                </h4>
                                
                                <div class="mb-3">
                                    <label class="form-label">Server Name *</label>
                                    <InputText @bind-Value="serverModel.Name" class="form-control form-control-lg" placeholder="Enter server name" />
                                    <ValidationMessage For="() => serverModel.Name" class="text-danger" />
                                    <div class="form-text">Choose a descriptive name for your server</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <h4 class="text-primary mb-3">
                                    <i class="bi bi-router me-2"></i>
                                    RCON Configuration
                                </h4>
                                
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label class="form-label">RCON IP Address *</label>
                                            <InputText @bind-Value="serverModel.RCONIP" class="form-control" placeholder="127.0.0.1" />
                                            <ValidationMessage For="() => serverModel.RCONIP" class="text-danger" />
                                            <div class="form-text">IP address where RCON server is listening</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label">Port *</label>
                                            <InputNumber @bind-Value="serverModel.RCONPort" class="form-control" placeholder="25575" min="1" max="65535" />
                                            <ValidationMessage For="() => serverModel.RCONPort" class="text-danger" />
                                            <div class="form-text">Default: 25575</div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">RCON Password *</label>
                                    <div class="input-group">
                                        <InputText @bind-Value="serverModel.RCONPassword" class="form-control" placeholder="Enter RCON password" type="@(showPassword ? "text" : "password")" />
                                        <button type="button" class="btn btn-outline-secondary" @onclick="TogglePasswordVisibility">
                                            <i class="bi bi-@(showPassword ? "eye-slash" : "eye")"></i>
                                        </button>
                                    </div>
                                    <ValidationMessage For="() => serverModel.RCONPassword" class="text-danger" />
                                    <div class="form-text">Secure password for RCON authentication</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex gap-2 justify-content-end">
                                <button type="button" class="btn btn-outline-secondary" @onclick="GoBack">
                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-primary btn-lg px-4" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <text>Updating Server...</text>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle me-1"></i>
                                        <text>Update Server</text>
                                    }
                                </button>
                            </div>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    
    private ServerModel serverModel = new();
    private bool showPassword = false;
    private bool isSaving = false;
    private bool loading = true;
    private bool serverNotFound = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadServer();
    }

    private async Task LoadServer()
    {
        try
        {
            loading = true;
            var server = await Api.GetServerAsync(Id);
            
            serverModel = new ServerModel
            {
                Name = server.Name,
                RCONIP = server.RCONIP,
                RCONPort = server.RCONPort,
                RCONPassword = server.RCONPassword
            };
        }
        catch (Exception ex)
        {
            if (ex.Message.Contains("404") || ex.Message.Contains("Not Found"))
            {
                serverNotFound = true;
            }
            else
            {
                errorMessage = $"Error loading server: {ex.Message}";
                Logger.LogError(ex, "Error loading server {ServerId}", Id);
            }
        }
        finally
        {
            loading = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/servers");
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    private async Task HandleValidSubmit()
    {
        UpdateServerDto? updateDto = null;
        
        try
        {
            isSaving = true;
            errorMessage = null;
            successMessage = null;
            
            updateDto = new UpdateServerDto
            {
                Name = serverModel.Name,
                RCONIP = serverModel.RCONIP,
                RCONPort = serverModel.RCONPort,
                RCONPassword = serverModel.RCONPassword
            };
            
            Logger.LogInformation("Updating server {ServerId} with data: Name={Name}, RCONIP={RCONIP}, RCONPort={RCONPort}", 
                Id, updateDto.Name, updateDto.RCONIP, updateDto.RCONPort);
            
            await Api.UpdateServerAsync(Id, updateDto);
            
            successMessage = "Server updated successfully! Redirecting...";
            StateHasChanged();
            
            await Task.Delay(1500);
            Navigation.NavigateTo("/servers");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating server {ServerId}. Data was: Name={Name}, RCONIP={RCONIP}, RCONPort={RCONPort}", 
                Id, updateDto?.Name ?? "null", updateDto?.RCONIP ?? "null", updateDto?.RCONPort ?? 0);
            
            if (ex.Message.Contains("400"))
            {
                errorMessage = $"Validation error: Please check that all required fields are filled correctly. Details: {ex.Message}";
            }
            else
            {
                errorMessage = $"Error updating server: {ex.Message}";
            }
        }
        finally
        {
            isSaving = false;
        }
    }

    private class ServerModel
    {
        [Required]
        [MaxLength(100)]
        public string Name { get; set; } = "";
        
        [Required]
        [MaxLength(50)]
        public string RCONIP { get; set; } = "";
        
        [Range(1, 65535)]
        public int RCONPort { get; set; } = 25575;
        
        [Required]
        [MaxLength(100)]
        public string RCONPassword { get; set; } = "";
    }
}