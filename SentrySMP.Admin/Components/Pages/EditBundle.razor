@page "/edit-bundle/{id:int}"
@rendermode InteractiveServer
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components
@using SentrySMP.Admin.Components
@inject ISentryApi Api
@inject ILogger<EditBundle> Logger
@inject NavigationManager Navigation

<PageTitle>Edit Bundle - SentrySMP Admin</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>
                        <i class="bi bi-pencil-square me-2"></i>
                        Edit Bundle
                    </h1>
                    <p class="text-muted">Update bundle configuration</p>
                </div>
                <button class="btn btn-outline-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left"></i> Back to Bundles
                </button>
            </div>
        </div>
    </div>
    
    @if (loading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (bundleNotFound)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Bundle with ID @Id not found.
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @errorMessage
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        @successMessage
                    </div>
                }
                
                <EditForm Model="bundleModel" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <h4 class="text-primary mb-3">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Basic Information
                                </h4>
                                
                                <div class="mb-3">
                                    <label class="form-label">Bundle Name *</label>
                                    <InputText @bind-Value="bundleModel.Name" class="form-control form-control-lg" placeholder="Enter bundle name" />
                                    <ValidationMessage For="() => bundleModel.Name" class="text-danger" />
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Price *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">â‚¬</span>
                                        <InputNumber @bind-Value="bundleModel.Price" class="form-control" placeholder="0.00" step="0.01" />
                                    </div>
                                    <ValidationMessage For="() => bundleModel.Price" class="text-danger" />
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Server *</label>
                                    <InputSelect @bind-Value="bundleModel.ServerId" class="form-select">
                                        <option value="">Select a server...</option>
                                        @if (servers != null)
                                        {
                                            @foreach (var server in servers)
                                            {
                                                <option value="@server.Id">@server.Name</option>
                                            }
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="() => bundleModel.ServerId" class="text-danger" />
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <h4 class="text-primary mb-3">
                                    <i class="bi bi-image me-2"></i>
                                    Additional Details
                                </h4>
                                
                                <ImageUploader Label="Bundle Image" 
                                             ImageUrl="@bundleModel.Image" 
                                             ImageUrlChanged="@((string? url) => bundleModel.Image = url)" />
                                
                                <div class="mb-3">
                                    <label class="form-label">Sale Percentage (0-100%)</label>
                                    <div class="input-group">
                                        <InputNumber @bind-Value="bundleModel.Sale" class="form-control" placeholder="0" min="0" max="100" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <div class="form-text">Enter 0 for no sale, or discount percentage</div>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Global Max Order (Optional)</label>
                                    <InputNumber @bind-Value="bundleModel.GlobalMaxOrder" class="form-control" placeholder="Leave empty for unlimited" min="1" />
                                    <div class="form-text">Maximum total quantity per user across all orders (leave empty for unlimited)</div>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <InputTextArea @bind-Value="bundleModel.Description" class="form-control" rows="4" placeholder="Enter bundle description..." />
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Commands</label>
                        <div class="form-text text-muted mb-2">For replacing string with name use %player%.</div>
                        <div>
                            @if (commandInputs == null || !commandInputs.Any())
                            {
                                <div class="text-muted mb-2">No commands attached.</div>
                            }
                            @for (int i = 0; i < (commandInputs?.Count ?? 0); i++)
                            {
                                var idx = i;
                                var cmd = commandInputs![idx];
                                <div class="input-group mb-2">
                                    <InputText @bind-Value="cmd.CommandText" class="form-control" placeholder="Enter command text" />
                                    <button type="button" class="btn btn-outline-danger" @onclick="() => RemoveCommand(idx)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            }
                            <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AddCommand">
                                <i class="bi bi-plus"></i> Add Command
                            </button>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex gap-2 justify-content-end">
                                <button type="button" class="btn btn-outline-secondary" @onclick="GoBack">
                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-primary btn-lg px-4" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <text>Updating Bundle...</text>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle me-1"></i>
                                        <text>Update Bundle</text>
                                    }
                                </button>
                            </div>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    
    private BundleModel bundleModel = new();
    private List<ServerResponse>? servers;
    private bool isSaving = false;
    private bool loading = true;
    private bool bundleNotFound = false;
    private string? errorMessage;
    private string? successMessage;
    private List<CommandInputModel>? commandInputs = new();

    protected override async Task OnInitializedAsync()
    {
        await Task.WhenAll(LoadBundle(), LoadServers());
    }

    private async Task LoadBundle()
    {
        try
        {
            var bundle = await Api.GetBundleAsync(Id);
            
            bundleModel = new BundleModel
            {
                Name = bundle.Name,
                Description = bundle.Description,
                Price = bundle.Price,
                ServerId = bundle.ServerId,
                Sale = bundle.Sale,
                Image = bundle.Image,
                GlobalMaxOrder = bundle.GlobalMaxOrder
            };
            // populate command inputs from returned bundle commands (if any)
            if (bundle.Commands != null && bundle.Commands.Any())
            {
                commandInputs = bundle.Commands.Select(c => new CommandInputModel { CommandText = c.CommandText }).ToList();
            }
        }
        catch (Exception ex)
        {
            if (ex.Message.Contains("404") || ex.Message.Contains("Not Found"))
            {
                bundleNotFound = true;
            }
            else
            {
                errorMessage = $"Error loading bundle: {ex.Message}";
                Logger.LogError(ex, "Error loading bundle {BundleId}", Id);
            }
        }
        finally
        {
            loading = false;
        }
    }

    private async Task LoadServers()
    {
        try
        {
            servers = (await Api.GetServersAsync()).ToList();
        }
        catch (Exception ex)
        {
            servers = new List<ServerResponse>(); // Prevent null reference
            if (string.IsNullOrEmpty(errorMessage))
                errorMessage = $"Error loading servers: {ex.Message}";
            Logger.LogError(ex, "Error loading servers");
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/bundles");
    }

    private async Task HandleValidSubmit()
    {
        UpdateBundleDto? updateDto = null;
        
        try
        {
            isSaving = true;
            errorMessage = null;
            successMessage = null;
            
            updateDto = new UpdateBundleDto
            {
                Name = bundleModel.Name,
                Description = bundleModel.Description ?? "",
                Price = bundleModel.Price,
                ServerId = bundleModel.ServerId,
                Sale = bundleModel.Sale,
                Image = bundleModel.Image,
                GlobalMaxOrder = bundleModel.GlobalMaxOrder
            };
            // include commands if provided
            if (commandInputs != null && commandInputs.Any())
            {
                updateDto.Commands = commandInputs.Select(c => new CreateCommandDto { CommandText = c.CommandText }).ToList();
            }
            
            Logger.LogInformation("Updating bundle {BundleId} with data: Name={Name}, Price={Price}, ServerId={ServerId}", 
                Id, updateDto.Name, updateDto.Price, updateDto.ServerId);
            
            await Api.UpdateBundleAsync(Id, updateDto);
            
            successMessage = "Bundle updated successfully! Redirecting...";
            StateHasChanged();
            
            await Task.Delay(1500);
            Navigation.NavigateTo("/bundles");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating bundle {BundleId}. Data was: Name={Name}, Price={Price}, ServerId={ServerId}", 
                Id, updateDto?.Name ?? "null", updateDto?.Price ?? 0, updateDto?.ServerId ?? 0);
            
            if (ex.Message.Contains("400"))
            {
                errorMessage = $"Validation error: Please check that all required fields are filled correctly. Details: {ex.Message}";
            }
            else
            {
                errorMessage = $"Error updating bundle: {ex.Message}";
            }
        }
        finally
        {
            isSaving = false;
        }
    }

    private class BundleModel
    {
        [Required]
        [MaxLength(100)]
        public string Name { get; set; } = "";
        
        [MaxLength(500)]
        public string? Description { get; set; }
        
        [Required]
        [Range(0.01, double.MaxValue, ErrorMessage = "Price must be greater than 0")]
        public double Price { get; set; }
        
        [Required(ErrorMessage = "Please select a server")] 
        public int ServerId { get; set; }
        
        [Range(0, 100)]
        public int Sale { get; set; }
        
        public int? GlobalMaxOrder { get; set; }
        
        [MaxLength(500)]
        public string? Image { get; set; }
        // commands are handled separately in the edit view via commandInputs
    }

    private class CommandInputModel
    {
        public string CommandText { get; set; } = string.Empty;
    }

    private void AddCommand()
    {
        if (commandInputs == null)
            commandInputs = new List<CommandInputModel>();
        commandInputs.Add(new CommandInputModel());
    }

    private void RemoveCommand(int index)
    {
        if (commandInputs == null) return;
        if (index < 0 || index >= commandInputs.Count) return;
        commandInputs.RemoveAt(index);
    }
}
