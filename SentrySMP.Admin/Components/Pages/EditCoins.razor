@using Microsoft.AspNetCore.Components.Forms
@page "/edit-shard/{id:int}"
@rendermode InteractiveServer
@using SentrySMP.Shared.DTOs
@inject ISentryApi Api
@inject ILogger<EditCoins> Logger
@inject NavigationManager Navigation

<PageTitle>Edit Coin - SentrySMP Admin</PageTitle>


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1>
                        <i class="bi bi-pencil-square me-2"></i>
                        Edit Coin
                    </h1>
                    <p class="text-muted">Update shard configuration</p>
                </div>
                <button class="btn btn-outline-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left"></i> Back to Coins
                </button>
            </div>
        </div>
    </div>
    @if (loading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (shardNotFound)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Coin with ID @Id not found.
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @errorMessage
                    </div>
                }
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        @successMessage
                    </div>
                }
                <EditForm Model="shardModel" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <InputText class="form-control" @bind-Value="shardModel.Name" />
                                <ValidationMessage For="() => shardModel.Name" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <InputTextArea class="form-control" @bind-Value="shardModel.Description" />
                                <ValidationMessage For="() => shardModel.Description" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Image URL</label>
                                <InputText class="form-control" @bind-Value="shardModel.Image" />
                                <ValidationMessage For="() => shardModel.Image" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Price</label>
                                <InputNumber class="form-control" @bind-Value="shardModel.Price" />
                                <ValidationMessage For="() => shardModel.Price" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Sale (%)</label>
                                <InputNumber class="form-control" @bind-Value="shardModel.Sale" />
                                <ValidationMessage For="() => shardModel.Sale" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Global Max Order (Optional)</label>
                                <InputNumber class="form-control" @bind-Value="shardModel.GlobalMaxOrder" placeholder="Leave empty for unlimited" />
                                <div class="form-text">Maximum total quantity per user across all orders (leave empty for unlimited)</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Server</label>
                                <InputSelect class="form-select" @bind-Value="shardModel.ServerId">
                                    <option value="">Select server</option>
                                    @foreach (var server in servers)
                                    {
                                        <option value="@server.Id">@server.Name</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="() => shardModel.ServerId" />
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label">Commands</label>
                        <div class="form-text text-muted mb-2">For replacing string with name use %player%.</div>
                        @if (shardCommands == null || !shardCommands.Any())
                        {
                            <div class="text-muted">No commands attached.</div>
                        }
                        @for (int i = 0; i < (shardCommands?.Count ?? 0); i++)
                        {
                            var idx = i;
                            var cmd = shardCommands![idx];
                            <div class="input-group mb-2">
                                <InputText @bind-Value="cmd.CommandText" class="form-control" />
                                <button type="button" class="btn btn-outline-danger" @onclick="() => RemoveCoinCommand(idx)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        }
                        <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AddCoinCommand">
                            <i class="bi bi-plus"></i> Add Command
                        </button>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mt-3">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </EditForm>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private UpdateCoinDto shardModel = new();
    private List<ServerResponse> servers = new();
    private string? errorMessage;
    private string? successMessage;
    private bool loading = true;
    private bool shardNotFound = false;
    private List<CommandInputModel>? shardCommands = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            loading = true;
            servers = (await Api.GetServersAsync()).ToList();
            var shard = await Api.GetCoinAsync(Id);
            if (shard == null)
            {
                shardNotFound = true;
                return;
            }
            shardModel = new UpdateCoinDto
            {
                Name = shard.Name,
                Description = shard.Description,
                Price = shard.Price,
                Sale = shard.Sale,
                Image = shard.Image,
                GlobalMaxOrder = shard.GlobalMaxOrder,
                ServerId = shard.Server?.Id ?? 0
            };
                if (shard.Commands != null && shard.Commands.Any())
                {
                    shardCommands = shard.Commands.Select(c => new CommandInputModel { CommandText = c.CommandText }).ToList();
                }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading shard: {ex.Message}";
            Logger.LogError(ex, "Error loading shard");
        }
        finally
        {
            loading = false;
        }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            errorMessage = null;
            successMessage = null;
            if (shardCommands != null && shardCommands.Any())
            {
                shardModel.Commands = shardCommands.Select(c => new CreateCommandDto { CommandText = c.CommandText }).ToList();
            }
            await Api.UpdateCoinAsync(Id, shardModel);
            successMessage = "Coin updated successfully! Redirecting...";
            StateHasChanged();
            await Task.Delay(1500);
            Navigation.NavigateTo("/shards");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating shard: {ex.Message}";
            Logger.LogError(ex, "Error updating shard");
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/shards");
    }

    private class CommandInputModel
    {
        public string CommandText { get; set; } = string.Empty;
    }

    private void AddCoinCommand()
    {
        if (shardCommands == null) shardCommands = new List<CommandInputModel>();
        shardCommands.Add(new CommandInputModel());
    }

    private void RemoveCoinCommand(int index)
    {
        if (shardCommands == null) return;
        if (index < 0 || index >= shardCommands.Count) return;
        shardCommands.RemoveAt(index);
    }
}
