@page "/ranks"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@using SentrySMP.Shared.DTOs
@using SentrySMP.Shared.Interfaces
@inject ISentryApi Api
@inject ILogger<Ranks> Logger
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Ranks - SentrySMP Admin</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-award-fill text-primary me-2"></i>
                    Rank Management
                </h1>
                <a href="/add-rank" class="btn btn-success">
                    <i class="bi bi-plus-circle-fill me-2"></i>
                    Create New Rank
                </a>
            </div>

            @if (loading)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @errorMessage
                </div>
            }
            else if (ranks?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="bi bi-image me-1"></i>Image</th>
                                <th><i class="bi bi-award me-1"></i>Name</th>
                                <th><i class="bi bi-file-text me-1"></i>Description</th>
                                <th><i class="bi bi-currency-euro me-1"></i>Price</th>
                                <th><i class="bi bi-percent me-1"></i>Sale</th>
                                <th><i class="bi bi-terminal me-1"></i>Commands</th>
                                <th><i class="bi bi-gear me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rank in ranks)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(rank.Image))
                                        {
                                            <img src="@rank.Image" alt="@rank.Name" style="width: 50px; height: 50px; object-fit: cover;" class="rounded">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                <i class="bi bi-award-fill text-white"></i>
                                            </div>
                                        }
                                    </td>
                                    <td><strong>@rank.Name</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(rank.Description))
                                        {
                                            @(rank.Description.Length > 50 ? rank.Description.Substring(0, 50) + "..." : rank.Description)
                                        }
                                    </td>
                                    <td>
                                        <strong class="text-success">
                                            <i class="bi bi-currency-euro me-1"></i>
                                            @rank.Price.ToString("F2")
                                        </strong>
                                    </td>
                                    <!-- Server column removed for Rank -->
                                    <td>
                                        @if (rank.Sale > 0)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-percent me-1"></i>
                                                @rank.Sale% OFF
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-dash-circle me-1"></i>
                                                Regular
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (rank.Commands != null && rank.Commands.Any())
                                        {
                                            var cmdText = string.Join(", ", rank.Commands.Select(c => c.CommandText));
                                            <span class="badge bg-info" title="@cmdText">
                                                <i class="bi bi-terminal me-1"></i>
                                                @rank.Commands.Count
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">â€”</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/edit-rank/@rank.Id" class="btn btn-sm btn-outline-primary" title="Edit Rank" data-bs-toggle="tooltip">
                                                <i class="bi bi-pencil-square me-1"></i>
                                                Edit
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteRank(rank.Id, rank.Name)" title="Delete Rank" data-bs-toggle="tooltip">
                                                <i class="bi bi-trash3-fill me-1"></i>
                                                Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle-fill"></i>
                    No ranks found. Create your first rank!
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<RankResponse>? ranks;
    private bool loading = true;
    private string? errorMessage;

    private bool isInitialized = false;

    protected override async Task OnInitializedAsync()
    {
        if (!isInitialized)
        {
            isInitialized = true;
            await LoadRanks();
        }
    }

    private async Task LoadRanks()
    {
        try
        {
            loading = true;
            errorMessage = null;
            ranks = (await Api.GetRanksAsync()).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading ranks: {ex.Message}";
            Logger.LogError(ex, "Error loading ranks");
        }
        finally
        {
            loading = false;
        }
    }

    // No servers needed for Rank list

    private async Task DeleteRank(int rankId, string rankName)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete the rank '{rankName}'?"))
        {
            try
            {
                await Api.DeleteRankAsync(rankId);
                await JSRuntime.InvokeVoidAsync("alert", "Rank deleted successfully!");
                await LoadRanks();
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting rank: {ex.Message}");
                Logger.LogError(ex, "Error deleting rank {RankId}", rankId);
            }
        }
    }

    private class RankModel
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string? Description { get; set; }
        public double Price { get; set; }
    // ServerId removed for Rank
        public int Sale { get; set; }
        public string? Image { get; set; }
    }
}
